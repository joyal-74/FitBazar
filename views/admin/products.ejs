<body class="bg-light">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container d-flex align-items-center justify-content-between">
            <!-- Logo -->
            <a class="navbar-brand fw-bold" href="#" style="font-size: 28px; color: #3e29a8;">FitBazar</a>

            <!-- Navbar Toggler for Mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Items -->
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <div class="d-flex align-items-center">
                    <a href="#" class="me-3 notification-icon">
                        <i class="fa-regular fa-lg fa-bell" style="color: #ffffff;"></i>
                    </a>
                    <a href="#" class="avathar">
                        <i class="fa-solid fa-circle-user fa-xl" style="color: #ffffff;"></i>
                    </a>
                </div>
            </div>
        </div>
    </nav>


    <!-- Sidebar + Main Content Wrapper -->
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-white sidebar shadow-sm pt-2">
                <ul class="nav flex-column mt-3 gap-2">
                    <li class="nav-item ps-4"><a class="nav-link text-dark" href="/admin/dashboard"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a></li>
                    <li class="nav-item ps-4"><a class="nav-link text-dark" href="/admin/categories"><i class="fas fa-grid-2 me-2"></i>Categories</a></li>
                    <li class="nav-item btn admin-btns w-75 p-0"><a class="nav-link active text-white" href="#"><i class="fas fa-tags me-2"></i>Products</a></li>
                    <li class="nav-item ps-4"><a class="nav-link text-dark" href="/admin/customers"><i class="fas fa-user me-2"></i>Customers</a></li>
                    <li class="nav-item ps-4"><a class="nav-link text-dark" href="/admin/orders"><i class="fas fa-bag-shopping me-2"></i>Orders</a></li>
                    <li class="nav-item ps-4"><a class="nav-link text-dark" href="#"><i class="fas fa-percent me-2"></i>Coupons</a></li>
                    <li class="nav-item ps-4"><a class="nav-link text-dark" href="#"><i class="fas fa-undo me-2"></i>Refund/Return</a></li>
                    <li class="nav-item ps-4"><a class="nav-link text-dark" href="#"><i class="fas fa-chart-line me-2"></i>Sales Report</a></li>
                    <li class="nav-item ps-4"><a class="nav-link text-dark" href="#"><i class="fas fa-sign-out-alt me-2"></i>Sign Out</a></li>
                </ul>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-9 px-md-4 py-4 mx-auto">
                <h1 class="h3 mb-4 fw-bold">Products</h1>

                <!-- Filters and Add Product Button -->
                <div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mb-4">
                    <!-- Filter by Category -->
                    <div class="d-flex gap-2">
                        <div class="flex-grow-1" style="max-width: 150px;">
                            <select class="form-select">
                                <option selected disabled hidden>Category ⇅</option>
                                <% cat.forEach(category => { %>
                                    <option value="<%= category.name %>"><%= category.name %></option>
                                <% }) %>
                            </select>
                        </div>

                        <!-- Filter by Stock -->
                        <div class="flex-grow-1" style="max-width: 120px;">
                            <select class="form-select">
                                <option selected disabled hidden>Stock ⇅</option>
                                <option value="1">In Stock</option>
                                <option value="2">Out of Stock</option>
                            </select>
                        </div>

                        <!-- Filter by Status -->
                        <div class="flex-grow-1" style="max-width: 160px;">
                            <select class="form-select">
                                <option selected disabled hidden>Status ⇅</option>
                                <option value="1">Active</option>
                                <option value="2">Hidden</option>
                            </select>
                        </div>
                    </div>

                    <!-- Search Bar -->
                    <form class="d-flex search-container flex-grow-1" style="max-width: 300px;" id="searchForm">
                        <input id="searchInput" class="form-control me-2" type="search" placeholder="Search category name...." aria-label="Search" value="<%= searchQuery || '' %>">
                        <button class="btn" type="submit" style="background-color: #3e29a8;">
                            <i class="fas fa-search text-white"></i>
                        </button>
                    </form>

                    <!-- Add Product Button -->
                    <div class="text-end">
                        <a class="btn add-product-btn" href="/admin/addProducts">
                            <i class="fas fa-plus me-2"></i> New
                        </a>
                    </div>
                </div>


                <!-- Products Table -->
                <div class="card">
                    <div class="card-body p-0 m-0">
                        <div class="table-responsive">
                            <table class="table table-hover text-center">
                                <thead>
                                    <tr>
                                        <th>Product ID</th>
                                        <th>Name</th>
                                        <th>Category</th>
                                        <th>Price</th>
                                        <th>Stock</th>
                                        <th>Added On</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% product.forEach(product => { %>
                                        <tr>
                                            <td><%= product.productId %></td>
                                            <td><%= product.name %></td>
                                            <td><%= product.category %></td>
                                            <td>₹ <%= product.price.toFixed(2) %></td>
                                            <td>
                                                <% if (product.stock > 0) { %>
                                                    <span class="badge bg-success">In Stock (<%= product.stock %>)</span>
                                                <% } else { %>
                                                    <span class="badge bg-danger">Out of Stock</span>
                                                <% } %>
                                            </td>
                                            <td><%= new Date(product.createdAt).toLocaleDateString("en-US") %></td>
                                            <td>
                                                <div class="d-flex justify-content-center align-items-center">
                                                    <!-- Visible (Eye) Icon: Shown when visibility is TRUE -->
                                                    <p style="color: #3e29a8; margin: 0;" class="<%= product.visibility ? '' : 'd-none' %>">
                                                        <i class="fa-solid fa-eye"></i>
                                                    </p>
                                                
                                                    <!-- Hidden (Eye-slash) Icon: Shown when visibility is FALSE -->
                                                    <p style="color: #9c9999; margin: 0;" class="<%= product.visibility ? 'd-none' : '' %>">
                                                        <i class="fa-solid fa-eye-slash"></i>
                                                    </p>
                                                </div>
                                                
                                            </td>
                                            
                                            <td>
                                                <a href="/admin/editProducts/<%= product.productId %>" class="btn btn-sm btn-outline-primary me-2">Edit</a>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                            
                            
                        </div>
                        
                    </div>
                    
                </div>
                <!-- Pagination -->
                <div class="d-flex justify-content-center mt-3 ">
                    <nav>
                        <ul class="pagination pagination-sm">
                            <!-- Previous Page Button -->
                            <% if (currentPage > 1) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage - 1 %>" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                            <% } %>

                            <!-- Page Numbers -->
                            <% for(let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                </li>
                            <% } %>

                            <!-- Next Page Button -->
                            <% if (currentPage < totalPages) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage + 1 %>" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            <% } %>
                        </ul>
                    </nav>
                </div>
            </main>
        </div>
    </div>
    <script>
        document.getElementById('searchForm').addEventListener('submit', async function (event) {
                event.preventDefault();

                const searchQuery = document.getElementById('searchInput').value.trim();

                try {
                    if (searchQuery) {
                        window.location.href = `/admin/products?q=${encodeURIComponent(searchQuery)}`;
                    } else if (searchQuery == "") {
                        window.location.href = '/admin/products'; 
                    }
                } catch (error) {
                    console.error('Error fetching search results:', error);
                }
            });
    </script>
</body>