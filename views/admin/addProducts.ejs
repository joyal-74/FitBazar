<!-- Sidebar + Main Content -->
<div class="container-fluid w-100">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-white sidebar shadow-sm pt-2">
            <ul class="nav flex-column mt-3 gap-2">
                <li class="nav-item ps-4"><a class="nav-link text-dark" href="/admin/dashboard"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a></li>
                <li class="nav-item ps-4"><a class="nav-link text-dark" href="/admin/customers"><i class="fas fa-user me-2"></i>Customers</a></li>
                <li class="nav-item ps-4"><a class="nav-link text-dark" href="/admin/categories"><i class="fas fa-boxes me-2"></i>Categories</a></li>
                <li class="nav-item btn admin-btns w-75 p-0"><a class="nav-link active text-white" href="#"><i class="fas fa-tags me-2"></i>Products</a></li>
                <li class="nav-item ps-4"><a class="nav-link text-dark" href="/admin/orders"><i class="fas fa-box me-2"></i>Orders</a></li>
                <li class="nav-item ps-4"><a class="nav-link text-dark" href="#"><i class="fas fa-percent me-2"></i>Coupons</a></li>
                <li class="nav-item ps-4"><a class="nav-link text-dark" href="#"><i class="fas fa-undo me-2"></i>Refund/Return</a></li>
                <li class="nav-item ps-4"><a class="nav-link text-dark" href="#"><i class="fas fa-chart-line me-2"></i>Sales Report</a></li>
                <li class="nav-item ps-4"><a class="nav-link text-dark" href="#"><i class="fas fa-sign-out-alt me-2"></i>Sign Out</a></li>
            </ul>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-9 px-md-4 py-4 mx-auto">
            <h1 class="h3 mb-4 fw-bold">Add Product</h1>

            <!-- Add Product Form -->
            <div class="card add-product-form p-4">
                <div class="card-body p-2">
                    <form id="addProductForm" enctype="multipart/form-data">
                        <div class="mb-3 d-flex gap-3">
                            <div class="w-100">
                                <label for="productName" class="form-label mb-1">Product Name</label>
                                <input type="text" class="form-control form-control-sm" id="productName" name="productName" placeholder="Enter product name">
                            </div>

                            <!-- Category Selection -->
                            <div class="w-100">
                                <label for="productCategory" class="form-label mb-1">Category</label>
                                <select class="form-select form-select-sm" id="productCategory" name="productCategory">
                                    <option hidden>Select category</option>
                                    <% category.forEach(category => { %>
                                        <option value="<%= category.name %>"><%= category.name %></option>
                                    <% }) %>
                                </select>
                            </div>

                            <!-- brand  -->
                            <div class="w-100">
                                <label for="brand" class="form-label mb-1">Brand</label>
                                <input type="text" class="form-control form-control-sm" id="brand" name="productBrand" placeholder="Enter brand">
                            </div>
                        </div>

                        <!-- Stock Quantity & Brand -->
                        <div class="mb-3 d-flex gap-3">
                            <div class="w-100">
                                <label for="productStock" class="form-label mb-1">Stock</label>
                                <input type="number" class="form-control form-control-sm" id="productStock" name="productStock" placeholder="Enter quantity">
                            </div>
                            <div class="w-100">
                                <label for="basePrice" class="form-label mb-1">Base Price</label>
                                <input type="number" id="productPrice" name="productPrice" class="form-control form-control-sm" placeholder="Enter price">
                            </div>
                            <div class="w-100">
                                <label for="discountPrice" class="form-label mb-1">Discount Percentage (%)</label>
                                <input type="number" id="productOffer" name="productOffer" class="form-control form-control-sm" placeholder="Enter discount">
                            </div>   
                        </div>

                        <!-- Product Description & specs -->
                        <div class="d-flex gap-3">
                            <div class="mb-3 w-100">
                                <label for="productDescription" class="form-label mb-1">Description</label>
                                <textarea class="form-control form-control-sm" id="productDescription" name="productDescription" rows="2" placeholder="Enter description"></textarea>
                            </div>
                            <div class="mb-3  w-100">
                                <label for="productDescription" class="form-label mb-1">Specifications</label>
                                <textarea class="form-control form-control-sm" id="productSpec" name="productSpec" rows="2" placeholder="Enter Specifications"></textarea>
                            </div>
                        </div>

                        <!-- Image & Size -->
                        <div class="mb-3 d-flex gap-3">                            
                            <div class="mb-3 w-100">
                                <label for="productImages" class="form-label">Upload new images</label>
                                <div class="input-group">
                                    <!-- Custom Button -->
                                    <button class="btn btn-outline-secondary" type="button" id="customFileButton">
                                        <i class="px-3 fa-solid fa-upload"></i>
                                    </button>
                        
                                    <!-- Hidden File Input -->
                                    <input type="file" class="form-control d-none" id="productImages" name="productImages" multiple onchange="updateFileNames(event)">
                        
                                    <!-- Display Selected File Names -->
                                    <span class="form-control d-flex align-items-center" id="fileNamesDisplay">No files chosen</span>
                                </div>
                            </div>
                        
                            <!-- Selected Image Preview -->
                            <div class="mb-3 w-100">
                                <label class="form-label">Selected Images</label>
                                <div id="imagePreview" class="d-flex flex-wrap gap-2 border p-2 rounded" style="min-height: 60px;">
                                    <span class="text-muted">No images selected</span>
                                </div>
                            </div> 
                        </div>

                        <!-- Color, Material, Weight -->
                        <div class="mb-3 d-flex gap-3">
                            <!-- <div class="w-100">
                                <label class="form-label mb-1">Size <span style="font-size: 0.8rem;">(in cm/inch or S/M/L/XL)</span></label>
                                <input type="text" class="form-control form-control-sm" id="productSize" name="productSize" placeholder="Enter size">
                            </div>
                            <div class="w-100">
                                <label class="form-label mb-1">Weight</label>
                                <input type="text" id="productWeight" name="productWeight" class="form-control form-control-sm" placeholder="Enter weight">
                            </div> -->

                            <!-- Size/Weight Selection -->
                            <div class="w-100">
                                <label class="form-label mb-1">Select Size/Weight</label>
                                <div id="attributeContainer">
                                    <!-- Default input for custom values -->
                                    <input type="text" class="form-control form-control-sm" name="customValue" placeholder="Enter custom size or weight">
                                </div>
                            </div>
                            

                            <div class="w-100">
                                <label class="form-label mb-1">Color <span style="font-size: 0.8em;">(Multiple color by comma)</span></label>
                                <input type="text" id="productColor" name="productColor" class="form-control form-control-sm" placeholder="Enter color">
                            </div>
                            <div class="w-100">
                                <label class="form-label mb-1">Material</label>
                                <input type="text" id="productMeterial" name="productMeterial" class="form-control form-control-sm" placeholder="Enter material">
                            </div>
                            
                        </div>

                        <!-- Submit Button -->
                        <div class="text-end">
                            <button type="submit" class="btn btn-sm btn-primary">Add Product</button>
                        </div>
                    </form>
                </div>
            </div>

        </main>
    </div>
</div>

<script>
    const categorySelect = document.getElementById('productCategory');
    const attributeContainer = document.getElementById('attributeContainer');
    const categoryAttributes = <%- JSON.stringify(categoryAttributes) %>;

    categorySelect.addEventListener('change', (event) => {
        const selectedCategory = event.target.value;
        const attributes = categoryAttributes[selectedCategory] || { sizes: [], weights: [] };

        let html = '';
        if (attributes.sizes.length > 0) {
            html = `
                <select class="form-select form-select-sm" name="size">
                    <option value="" hidden>Select Size</option>
                    ${attributes.sizes.map(size => `<option value="${size}">${size}</option>`).join('')}
                </select>
            `;
        } else if (attributes.weights.length > 0) {
            html = `
                <select class="form-select form-select-sm" name="weight">
                    <option value="" hidden>Select Weight</option>
                    ${attributes.weights.map(weight => `<option value="${weight}">${weight}</option>`).join('')}
                </select>
            `;
        } else {
            html = `<input type="text" class="form-control form-control-sm" name="customValue" placeholder="Enter custom size or weight">`;
        }

        attributeContainer.innerHTML = html;
    });



    document.getElementById("customFileButton").addEventListener("click", function () {
        document.getElementById("productImages").click();
    });

    // Update the file names display and show image previews
    function updateFileNames(event) {
        const files = event.target.files;
        const fileNamesDisplay = document.getElementById("fileNamesDisplay");
        const imagePreview = document.getElementById("imagePreview");

        // Clear previous previews
        imagePreview.innerHTML = "";

        if (files.length > 0) {
            // Display file names
            const fileNames = Array.from(files).map(file => file.name).join(", ");
            fileNamesDisplay.textContent = fileNames;

            // Loop through selected files and create image previews
            Array.from(files).forEach(file => {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const img = document.createElement("img");
                    img.src = e.target.result;
                    img.classList.add("img-thumbnail");
                    img.classList.add("m-0");
                    img.style.width = "50px";
                    img.style.height = "50px";
                    img.style.objectFit = "cover";
                    imagePreview.appendChild(img);
                };
                reader.readAsDataURL(file);
            });
        } else {
            fileNamesDisplay.textContent = "No files chosen";
            imagePreview.innerHTML = '<span class="text-muted">No images selected</span>';
        }
    }

    document.getElementById("addProductForm")?.addEventListener("submit", async function (event) {
        event.preventDefault();

        const formData = new FormData(this);

        try {
            const response = await fetch("/admin/addProducts", {
                method: "POST",
                body: formData
            });

            const result = await response.json();

            if (response.ok) {
                Swal.fire({
                    position: "top-center",
                    icon: "success",
                    title: "Product added successfully!",
                    showConfirmButton: false,
                    timer: 1500
                }).then(() => {
                    window.location.href = '/admin/products'
                });
            } else {
                Swal.fire({
                    icon: "error",
                    title: "Error",
                    text: result.error || "An unexpected error occurred.",
                });
            }
        } catch (error) {
            console.error("Error:", error);
            Swal.fire({
                icon: "error",
                title: "Oops!",
                text: "Something went wrong. Please try again.",
            });
        }
    });  
</script>

</body>

