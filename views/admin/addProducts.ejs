<!-- Sidebar + Main Content -->
<div class="container-fluid w-100">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-white sidebar shadow-sm pt-2">
            <ul class="nav flex-column mt-3 gap-2">
                <li class="nav-item ps-4"><a class="nav-link text-dark" href="/admin/dashboard"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a></li>
                <li class="nav-item ps-4"><a class="nav-link text-dark" href="/admin/customers"><i class="fas fa-user me-2"></i>Customers</a></li>
                <li class="nav-item ps-4"><a class="nav-link text-dark" href="/admin/categories"><i class="fas fa-boxes me-2"></i>Categories</a></li>
                <li class="nav-item btn admin-btns w-75 p-0"><a class="nav-link active text-white" href="#"><i class="fas fa-tags me-2"></i>Products</a></li>
                <li class="nav-item ps-4"><a class="nav-link text-dark" href="/admin/orders"><i class="fas fa-box me-2"></i>Orders</a></li>
                <li class="nav-item ps-4"><a class="nav-link text-dark" href="#"><i class="fas fa-percent me-2"></i>Coupons</a></li>
                <li class="nav-item ps-4"><a class="nav-link text-dark" href="#"><i class="fas fa-undo me-2"></i>Refund/Return</a></li>
                <li class="nav-item ps-4"><a class="nav-link text-dark" href="#"><i class="fas fa-chart-line me-2"></i>Sales Report</a></li>
                <li class="nav-item ps-4"><a class="nav-link text-dark" href="#"><i class="fas fa-sign-out-alt me-2"></i>Sign Out</a></li>
            </ul>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-9 px-md-4 py-4 mx-auto">
            <h1 class="h3 mb-4 fw-bold">Add Product</h1>

            <!-- Add Product Form -->
            <div class="card add-product-form">
                <div class="card-body">
                    <form id="addProductForm" enctype="multipart/form-data">
                        <div class="mb-3 d-flex gap-4">
                            <div class="w-50">
                                <label for="productName" class="form-label">Product Name</label>
                                <input type="text" class="form-control" id="productName" name="productName" placeholder="Enter product name">
                            </div>
                             

                            <!-- Category Selection -->
                            <div class="w-50">
                                <label for="productCategory" class="form-label">Category</label>
                                <select class="form-select" id="productCategory" name="productCategory" onchange="updateFields()">
                                    <% cat.forEach(category => { %>
                                        <option value="<%= category.name %>"><%= category.name %></option>
                                    <% }) %>
                                </select>
                            </div>
                        </div>

                        <!-- Stock Quantity (Always Visible) -->
                        <div class="mb-3 d-flex justify-content-between gap-4">
                            <div class="w-100">
                                <label for="productStock" class="form-label">Stock Quantity</label>
                                <input type="number" class="form-control" id="productStock" name="productStock" placeholder="Enter stock quantity">
                            </div>
                            <div class="w-100">
                                <label for="productStock" class="form-label">Brand</label>
                                <input type="text" class="form-control" id="brand" name="productBrand" placeholder="Enter product brand">
                            </div>
                        </div>

                        <!-- Product Description (Always Visible) -->
                        <div class="mb-3">
                            <label for="productDescription" class="form-label">Product Description</label>
                            <textarea class="form-control" id="productDescription" name="productDescription" rows="3" placeholder="Enter product description"></textarea>
                        </div>

                        <div class="d-flex gap-4">
                            <!-- Product Image Upload -->
                            <div class="mb-3 w-100">
                                <label class="form-label">Product Images</label>
                                <input type="file" class="form-control" id="productImages" name="productImages" multiple>
                            </div>
                            <!-- Size Selection -->
                            <div class="mb-3 w-100">
                                <label class="form-label">Size</label>
                                <input type="text" class="form-control" id="productSize" name="productSize" placeholder="Enter size">
                            </div>
                            
                        </div>

                        <div>
                            <div class="d-flex form-row gap-4">
                                
                
                                <div class="mb-3 w-100">
                                    <label for="productColor" class="form-label">Select a Color:</label>
                                        <input type="text" id="productColor" name="productColor" class="form-control" placeholder="Enter color of product">
                                </div>
                            
                                <div class="mb-3 w-100">
                                    <label class="form-label">Meterial type</label>
                                    <input type="text" id="productMeterial" name="productMeterial" class="form-control" placeholder="Enter meterial type">
                                </div>
                                <div class="mb-3 w-100">
                                    <label class="form-label">Weight(optional)</label>
                                    <input type="text" id="productWeight" name="productWeight" class="form-control" placeholder="Enter weight of product">
                                </div>
                            </div>
                        </div>

                        <!-- Base Price & Discount Price -->
                        <div class="mb-3 d-flex gap-4">
                            <div class="w-50">
                                <label for="basePrice" class="form-label">Base Price</label>
                                <input type="number" id="productPrice" name="productPrice" class="form-control" id="basePrice" placeholder="Enter base price">
                            </div>
                            <div class="w-50">
                                <label for="discountPrice" class="form-label">Discount Price</label>
                                <input type="number" id="discountPrice" name="discountPrice" class="form-control" id="discountPrice" placeholder="Enter discount price">
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="text-end">
                            <button type="submit" class="btn btn-primary">Add Product</button>
                        </div>
                    </form>
                </div>
            </div>
        </main>
    </div>
</div>

<script>
    document.getElementById("addProductForm")?.addEventListener("submit", async function (event) {
                event.preventDefault();
        
                const formData = new FormData(this);

                try {
                    const response = await fetch("/admin/addProducts", {
                        method: "POST",
                        body: formData
                    });
        
                    const result = await response.json();
        
                    if (response.ok) {
                        Swal.fire({
                            position: "top-center",
                            icon: "success",
                            title: "Product added successfully!",
                            showConfirmButton: false,
                            timer: 1500
                        }).then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire({
                            icon: "error",
                            title: "Error",
                            text: result.error || "An unexpected error occurred.",
                        });
                    }
                } catch (error) {
                    console.error("Error:", error);
                    Swal.fire({
                        icon: "error",
                        title: "Oops!",
                        text: "Something went wrong. Please try again.",
                    });
                }
            });
</script>

</body>

