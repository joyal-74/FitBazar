<body class="bg-violet">

    <!-- Navbar -->
    <%- include('../partials/header') %>

    <div class="container-fluid w-100 sidebar-header">
        <div class="row g-0">
            <!-- Sidebar -->
            <%- include('../partials/sidebar', { activePage: 'orders' }) %>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-9 px-md-4 py-4 mx-auto">
                <h1 class="h3 mb-4 fw-bold">Orders</h1>

                <!-- Filters and Export Button -->
                <form id="filterForm" method="GET" action="/admin/orders">
                    <div class="d-flex justify-content-between mb-4">
                        <!-- Filter by Status -->
                        <div class="col-2">
                            <select class="form-select" name="status" onchange="document.getElementById('filterForm').submit();">
                                <option value="">All Status</option>
                                <option value="Delivered" <%= status === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                                <option value="Placed" <%= status === 'Placed' ? 'selected' : '' %>>Placed</option>
                                <option value="Cancelled" <%= status === 'Cancelled' ? 'selected' : '' %>>Cancelled</option>
                                <option value="Out for Delivery" <%= status === 'Out for Delivery' ? 'selected' : '' %>>Out for Delivery</option>
                                <option value="Shipped" <%= status === 'Shipped' ? 'selected' : '' %>>Shipped</option>
                                <option value="Returned" <%= status === 'Returned' ? 'selected' : '' %>>Returned</option>
                            </select>
                        </div>
                        
                        <!-- Search Bar -->
                        <div class="d-flex search-container flex-grow-1" style="max-width: 300px;">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="search" value="<%= search %>">
                            <button class="btn" type="submit" style="background-color: #5b3f64;">
                                <i class="fas fa-search text-white"></i>
                            </button>
                            <button type="button" class="btn btn-secondary ms-2" onclick="clearFilters()">
                                Clear
                            </button>
                        </div>
                    </div>
                </form>

                <!-- Orders Table -->
                <div class="card">
                    <div class="card-body p-0 m-0">
                        <div class="table-responsive">
                            <table class="table" id="ordersTable">
                                <thead>
                                    <tr class="text-center">
                                        <th>SL No</th>
                                        <th>Order ID</th>
                                        <th>Customer</th>
                                        <th>Date</th>
                                        <th>No of Products</th>
                                        <th>Amount</th>
                                        <!-- <th>Status</th> --> 
                                        <th>Details</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (orders.length > 0) { %>
                                        <% orders.forEach((order, index) => { %>
                                            <tr class="text-center">
                                                <td><%= index + 1 %></td>
                                                <td>#<%= order.orderId %></td>
                                                <td><%= order.userId && order.userId.name ? order.userId.name : 'N/A'  %></td>
                                                <td><%= new Date(order.createdAt).toLocaleDateString('en-GB') %></td>
                                                <td><%= order.orderItems.length %></td>
                                                <td>
                                                    â‚¹<%= (
                                                        order.orderItems.reduce((total, item) => {
                                                            if (item.currentStatus !== 'Cancelled') {
                                                                return total + (item.discountPrice || 0) * (item.quantity || 1);
                                                            }
                                                            return total;
                                                        }, 0) - (order.coupon || 0) + (order.deliveryCharge || 0)
                                                    ).toLocaleString('en-IN') %>
                                                </td>
                                                                                                
                                                <!-- <td>
                                                    <% 
                                                        const statusPriority = {
                                                            'Cancelled': 0,
                                                            'Returned': 1,
                                                            'Placed': 2,
                                                            'Shipped': 3,
                                                            'Out for Delivery': 4,
                                                            'Delivered': 5
                                                        };
                                                
                                                        let worstStatus = 'Delivered';
                                                        let worstPriority = statusPriority[worstStatus];
                                                
                                                        order.orderItems.forEach(item => {
                                                            const itemStatus = item.statusHistory?.at(-1)?.status || 'Placed';
                                                            const itemPriority = statusPriority[itemStatus] ?? 2;
                                                            if (itemPriority < worstPriority) {
                                                                worstPriority = itemPriority;
                                                                worstStatus = itemStatus;
                                                            }
                                                        });
                                                    %>
                                                
                                                    <% if (worstStatus === 'Delivered') { %>
                                                        <span class="badge bg-success admin-status-badge">Delivered</span>
                                                    <% } else if (worstStatus === 'Placed') { %>
                                                        <span class="badge bg-warning admin-status-badge">Placed</span>
                                                    <% } else if (worstStatus === 'Cancelled') { %>
                                                        <span class="badge bg-danger admin-status-badge">Cancelled</span>
                                                    <% } else if (worstStatus === 'Out for Delivery') { %>
                                                        <span class="badge bg-info admin-status-badge">Out for Delivery</span>
                                                    <% } else if (worstStatus === 'Shipped') { %>
                                                        <span class="badge bg-violet admin-status-badge">Shipped</span>
                                                    <% } else if (worstStatus === 'Returned') { %>
                                                        <span class="badge admin-status-badge" style="background-color: #b9043a;">Returned</span>
                                                    <% } else { %>
                                                        <span class="badge bg-dark" style="border-radius: 28px; width: 130px;">Unknown</span>
                                                    <% } %>
                                                </td> -->
                                                
                                                <td>
                                                    <a href="/admin/vieworders?id=<%= order._id %>" class="btn btn btn-sm custom-outline-btn">View</a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="7" class="text-center">No orders found</td>
                                        </tr>
                                    <% } %>
                                </tbody>                                
                            </table>
                        </div>
                    </div>
                </div> 

                <!-- Pagination -->
                <div class="d-flex justify-content-center mt-3">
                    <nav>
                        <ul class="pagination pagination-sm">
                            <% if (currentPage > 1) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage - 1 %>&status=<%= status %>&search=<%= search %>" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                            <% } %>

                            <% for (let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>&status=<%= status %>&search=<%= search %>"><%= i %></a>
                                </li>
                            <% } %>

                            <% if (currentPage < totalPages) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage + 1 %>&status=<%= status %>&search=<%= search %>" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            <% } %>
                        </ul>
                    </nav>
                </div>              
            </main>
        </div>
    </div>

    <!-- Clear Filters Script -->
    <script>
        function clearFilters() {
            window.location.href = '/admin/orders';
        }
    </script>
</body>
