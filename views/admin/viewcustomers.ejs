                    <li class="nav-item ps-4"><a class="nav-link text-dark" href="#"><i class="fas fa-chart-line me-2"></i>Sales Report</a></li>
                    <li class="nav-item ps-4"><a class="nav-link text-dark" href="#"><i class="fas fa-sign-out-alt me-2"></i>Sign Out</a></li>
                </ul>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
                <h2>Customer Details</h2>

                <div class="row">
                    <!-- Profile Card -->
                    <div class="col-md-4">
                        <div class="profile-card">
                            <div class="text-center">
                                <img src="<%=customer.profilePic%>" class="rounded-circle mb-2" alt="User">
                                <h4><%= customer.name %></h4>
                                <span class="status-badge"><%= customer.isBlocked%></span>
                            </div>
                            <hr>
                            <p><strong>Customer ID:</strong> ID-011221</p>
                            <p><strong>Email:</strong> <%= customer.email %></p>
                            <p><strong>Address:</strong> Kozhikode, Kerala, India</p>
                            <p><strong>Phone:</strong> +91 7306950587</p>
                            <p><strong>Last Transaction:</strong> 12 Dec 2025</p>
                            <p><strong>Last Online:</strong> 1 Day Ago</p>
                            <button class="btn btn-danger w-50"><%= customer.isBlocked%></button>
                        </div>
                    </div>

                    <!-- Orders & Transactions -->
                    <div class="col-md-8">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="profile-card text-center">
                                    <h5>Total Orders</h5>
                                    <h2>2,400</h2>
                                    
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="profile-card text-center">
                                    <h5>Total Balance</h5>
                                    <h2>₹10,000.00</h2>
                                    
                                </div>
                            </div>
                        </div>

                        <!-- Transaction History Table -->
                        <div class="profile-card">
                            <div class="d-flex justify-content-between">
                                <h5>Transaction History</h5>
                                <div>
                                    <button class="btn btn-light btn-sm">Select Date</button>
                                    <button class="btn btn-light btn-sm">Filters</button>
                                </div>
                            </div>
                            <table class="table mt-2">
                                <thead>
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Product</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>#302002</td>
                                        <td>Sports Jersey</td>
                                        <td>₹321.00</td>
                                        <td><span class="transaction-status processing">Processing</span></td>
                                        <td>12 Dec 2025</td>
                                    </tr>
                                    <tr>
                                        <td>#301901</td>
                                        <td>Gym Bag</td>
                                        <td>₹590.00</td>
                                        <td><span class="transaction-status shipped">Shipped</span></td>
                                        <td>1 Dec 2023</td>
                                    </tr>
                                </tbody>
                            </table>

                            <!-- Pagination -->
                            <nav>
                                <ul class="pagination justify-content-center">
                                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                                    <li class="page-item active"><a class="page-link" href="#">2</a></li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

</body>
