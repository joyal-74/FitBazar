<body class="bg-light">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container d-flex align-items-center justify-content-between">
            <!-- Logo -->
            <a class="navbar-brand fw-bold" href="#" style="font-size: 28px; color: #3e29a8;">FitBazar</a>

            <!-- Navbar Toggler for Mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Items -->
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <div class="d-flex align-items-center">
                    <a href="#" class="me-3 notification-icon">
                        <i class="fa-regular fa-lg fa-bell" style="color: #3e29a8;"></i>
                    </a>
                    <a href="#" class="avathar">
                        <i class="fa-solid fa-circle-user fa-xl" style="color: #3e29a8;"></i>
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Sidebar + Main Content Wrapper -->
    <div class="container-fluid">
        <div class="row g-0">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-white sidebar shadow-sm pt-2">
                <ul class="nav flex-column mt-3 gap-2">
                    <li class="nav-item ps-4"><a class="nav-link text-dark" href="/admin/dashboard"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a></li>
                    <li class="nav-item ps-4"><a class="nav-link text-dark" href="/admin/customers"><i class="fas fa-user me-2"></i>Customers</a></li>
                    <li class="nav-item ps-4"><a class="nav-link text-dark" href="/admin/categories"><i class="fas fa-boxes me-2"></i>Categories</a></li>
                    <li class="nav-item ps-4"><a class="nav-link text-dark" href="/admin/products"><i class="fas fa-tags me-2"></i>Products</a></li>
                    <li class="nav-item btn admin-btns w-75 p-0"><a class="nav-link active text-white" href="/admin/orders"><i class="fas fa-box me-2"></i>Orders</a></li>
                    <li class="nav-item ps-4"><a class="nav-link text-dark" href="#"><i class="fas fa-percent me-2"></i>Coupons</a></li>
                    <li class="nav-item ps-4"><a class="nav-link text-dark" href="#"><i class="fas fa-undo me-2"></i>Refund/Return</a></li>
                    <li class="nav-item ps-4"><a class="nav-link text-dark" href="#"><i class="fas fa-chart-line me-2"></i>Sales Report</a></li>
                    <li class="nav-item ps-4"><a class="nav-link text-dark" href="/admin/logout"><i class="fas fa-sign-out-alt me-2"></i>Sign Out</a></li>
                </ul>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-9 px-md-4 py-4 mx-auto">
                <h1 class="h3 mb-4">View Order</h1>

                <!-- Order Details -->
                <div class="row">
                    <!-- Order Summary -->
                    <div class="col-md-8">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="card-title mb-0">Order Summary</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <p><strong>Order ID:</strong> #<%= order.orderId %></p>
                                        <p><strong>Order Date:</strong> <%= new Date(order.createdAt).toLocaleDateString('en-GB') %></p>
                                        <p><strong>Customer:</strong> <%= order.userId ? order.userId.name : 'Unknown' %></p>
                                    </div>
                                    <div class="col-md-6">
                                        <p><strong>Status:</strong> 
                                            <% if (order.status === 'Pending') { %>
                                                <span class="badge bg-warning"><%= order.status %></span>
                                            <% } else if (order.status === 'Delivered') { %>
                                                <span class="badge bg-success"><%= order.status %></span>
                                            <% } else if (order.status === 'Cancelled') { %>
                                                <span class="badge bg-danger"><%= order.status %></span>
                                            <% } %>
                                        </p>
                                        <p><strong>Total Amount:</strong> ₹<%= order.totalPrice.toLocaleString('en-IN') %></p>
                                        <p><strong>Payment Method:</strong> <%= order.paymentMethod %></p>
                                    </div>
                                </div>

                                <!-- Status Change Dropdown -->
                                
                            </div>
                        </div>

                        <!-- Product Details -->
                        <div class="card mb-4">
                            <div class="card-body p-0 m-0">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr class="text-center">
                                                <th>Product</th>
                                                <th>Quantity</th>
                                                <th>Price</th>
                                                <th>Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% order.orderItems.forEach(item => { %>
                                                <tr class="text-center">
                                                    <td><%= item.name %></td>
                                                    <td><%= item.quantity %></td>
                                                    <td>₹<%= item.price %></td>
                                                    <td>₹<%= item.quantity * item.price %></td>
                                                </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Order Timeline -->
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">Order Timeline</h5>
                            </div>
                            <div class="card-body">
                                <div class="timeline">
                                    <div class="timeline-item">
                                        <i class="fas fa-check-circle text-success me-2"></i>
                                        <p class="mb-1"><strong>Order Placed</strong></p>
                                        <p class="text-muted mb-0"><%= new Date(order.createdAt).toLocaleString() %></p>
                                    </div>
                                    <% if (order.status === 'Delivered' && order.createdAt.getTime() !== order.updatedAt.getTime()) { %>
                                        <div class="timeline-item">
                                            <i class="fas fa-truck text-primary me-2"></i>
                                            <p class="mb-1"><strong>Order Delivered</strong></p>
                                            <p class="text-muted mb-0"><%= new Date(order.updatedAt).toLocaleString() %></p>
                                        </div>
                                    <% } %>                                    
                                </div>
                            </div>
                        </div>
                        <div class="card mt-5">
                            <div class="card-header">
                                <h5 class="card-title mb-0">Update Status</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label for="orderStatus" class="form-label">Change Status</label>
                                    <select id="orderStatus" class="form-select" onchange="updateOrderStatus('<%= order.orderId %>')">
                                        <option value="Pending" <%= order.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                                        <option value="Delivered" <%= order.status === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                                        <option value="Cancelled" <%= order.status === 'Cancelled' ? 'selected' : '' %>>Cancelled</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script>
        async function updateOrderStatus(orderId) {
            const newStatus = document.getElementById('orderStatus').value;

            try {
                const response = await fetch(`/admin/orders?id=${orderId}`, {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ status: newStatus })
                });

                const data = await response.json();

                if (response.ok) {
                    Swal.fire({
                        text: data.message,
                        icon : "success",
                        timer: 2000,
                        showConfirmButton: false
                        
                    }).then(()=>{
                        window.location.reload();
                    })
                    
                } else {
                    alert(data.message || 'Failed to update status');
                }
            } catch (error) {
                console.error('Error updating status:', error);
                alert('An error occurred while updating the status');
            }
        }

        function confirmStatusChange(orderId) {
            const newStatus = document.getElementById('orderStatus').value;
            const confirmation = confirm(`Are you sure you want to change the status to "${newStatus}"?`);

            if (confirmation) {
                updateOrderStatus(orderId);
            } else {
                // Reset the dropdown to the original status
                document.getElementById('orderStatus').value = '<%= order.status %>';
            }
        }
    </script>
</body>