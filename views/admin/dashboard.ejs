<body class="bg-light">
    <!-- Navbar -->
    <%- include('../partials/header') %>

        <!-- Sidebar + Main Content in the same row -->
        <div class="container-fluid w-100 sidebar-header">
            <div class="row g-0">
                <!-- Sidebar -->
                <%- include('../partials/sidebar', { activePage: 'dashboard' }) %>

                <!-- Main Content -->
                <main class="col-md-9 ms-sm-auto col-lg-10 px-md-5 mt-4">
                    <div class="row g-4">
                        <div class="col-md-6 col-xl-3">
                            <div class="card shadow-sm p-3 d-flex align-items-center">
                                <div class="icon-container p-3 bg-danger text-white"><i class="fas fa-users fa-lg"></i>
                                </div>
                                <div class="ms-3">
                                    <p class="text-muted mb-1">Total Clients</p>
                                    <h5>6389</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-xl-3">
                            <div class="card shadow-sm p-3 d-flex align-items-center">
                                <div class="icon-container p-3 bg-primary text-white"><i
                                        class="fas fa-wallet fa-lg p-1"></i></div>
                                <div class="ms-3">
                                    <p class="text-muted mb-1">Total Sales</p>
                                    <h5>46,760</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-xl-3">
                            <div class="card shadow-sm p-3 d-flex align-items-center">
                                <div class="icon-container p-3 bg-warning text-white"><i
                                        class="fa-solid fa-dumbbell fa-lg"></i></i></div>
                                <div class="ms-3">
                                    <p class="text-muted mb-1">Total Orders</p>
                                    <h5>6389</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-xl-3">
                            <div class="card shadow-sm p-3 d-flex align-items-center">
                                <div class="icon-container p-3 bg-success text-white"><i
                                        class="fa-solid fa-chart-pie-simple fa-lg px-1"></i></div>
                                <div class="ms-3">
                                    <p class="text-muted mb-1">Products Sold</p>
                                    <h5>676</h5>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h4 class="mt-4">Recent Orders</h4>
                    <div class="card mt-4">
                        <div class="card-body p-0 m-0">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Customer</th>
                                        <th>Date</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>#12345</td>
                                        <td>John Doe</td>
                                        <td>2023-10-01</td>
                                        <td>₹1,200</td>
                                        <td><span class="badge bg-success">Completed</span></td>
                                    </tr>
                                    <tr>
                                        <td>#12346</td>
                                        <td>Jane Smith</td>
                                        <td>2023-10-02</td>
                                        <td>₹2,500</td>
                                        <td><span class="badge bg-warning">Pending</span></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </main>
            </div>
        </div>
</body>