<head>
    <style>
        /* Address Card */
        .address-card {
            background: linear-gradient(135deg, #F9F9F9, #fbf4fc);
            border-radius: 12px;
        }

        .address-card .form-check-input:checked + .form-check-label {
            font-weight: 600;
            color: var(--secondary);
        }
        .address-card .badge {
            background-color: var(--secondary);
            color: #FFFFFF;
            padding: 5px 10px;
            border-radius: 8px;
        }

        /* Add New Address Link */
        .add-address {
            font-weight: 500;
            color: var(--secondary);
            transition: color 0.2s ease;
        }
        .add-address:hover {
            color: var(--primary);
            text-decoration: none;
        }

        /* Order Summary */
        .order-summary {
            background: linear-gradient(135deg, #F9F9F9, #fbf4fc);
            border-radius: 12px;
            position: sticky;
            top: 20px;
        }
        .order-summary .btn-primary {
            background: linear-gradient(90deg, var(--secondary), var(--primary));
            border: none;
            border-radius: 12px;
            padding: 12px;
            font-size: 1.1rem;
            transition: transform 0.2s ease;
        }
        .order-summary .btn-primary:hover {
            transform: scale(1.02);
        }
        .coupon-input .btn-outline-secondary {
            border-radius: 0 5px 5px 0;
            transition: background-color 0.2s ease;
        }
        .coupon-input .btn-outline-secondary:hover {
            background-color: var(--secondary);
            color: #FFFFFF;
            border-color: var(--secondary);
        }
        .coupon-status {
            color: #03d10d;
            font-size: 0.85rem;
            margin-top: 5px;
        }
        .applied-coupon-tag {
            display: inline-flex;
            align-items: center;
            background-color: #e8f5e9;
            padding: 4px 10px;
            border-radius: 16px;
            margin-top: 8px;
            font-size: 0.85rem;
        }
        .applied-coupon-tag .coupon-code {
            color: #2e7d32;
            font-weight: 500;
            margin-right: 8px;
        }
        .remove-coupon-sm {
            color: #c62828;
            cursor: pointer;
            font-size: 0.8rem;
            display: inline-flex;
            align-items: center;
        }
        .view-coupons-link {
            display: inline-block;
            margin-top: 8px;
            color: var(--secondary);
            font-weight: 500;
            text-decoration: underline;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <%- include('../partials/userNavbar', { activePage: '' }) %> 

    <!-- Main Section -->
    <main class="container my-4 my-md-4">
        <div class="border-0 mb-4 p-3">
            <!-- Delivery Address Section Header -->
            <div class="border-0 mb-4 p-3">
                <div class="d-flex justify-content-between flex-wrap">
                    <h4 class="fw-bold mb-3 mb-md-0">Delivery address</h4>
                    
                    <!-- Progress Steps -->
                    <div class="d-flex align-items-center gap-2">
                        <div class="progress-step active d-flex align-items-center">
                            <i class="fas fa-shopping-cart me-1"></i>
                            <span class="d-none d-sm-inline">Cart</span>
                        </div>
                        <i class="fas fa-chevron-right text-muted mx-1 mx-md-2"></i>
                        <div class="progress-step d-flex align-items-center text-muted">
                            <i class="fas fa-truck me-1"></i>
                            <span class="d-none d-sm-inline">Shipping</span>
                        </div>
                        <i class="fas fa-chevron-right text-muted mx-1 mx-md-2"></i>
                        <div class="progress-step d-flex align-items-center text-muted">
                            <i class="fas fa-credit-card me-1"></i>
                            <span class="d-none d-sm-inline">Payment</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Form wrapping the entire row -->
            <form action="/user/checkout" method="post" id="checkoutForm">
                <div class="row gx-5 gy-2">
                    <!-- Address Selection -->
                    <div class="col-lg-8">
                        <% if (address.length > 0) { %>
                            <% address.forEach((address) => { %>
                                <% address.details.forEach((detail, index) => { %>
                                    <div class="card p-4 mb-4 border-0 shadow-sm address-card">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="selectedAddress" 
                                                id="address<%= detail._id %>" value="<%= detail._id %>" 
                                                <%= index === 0 ? 'checked' : '' %>>
                                            <label class="form-check-label w-100" for="address<%= detail._id %>">
                                                <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                                                    <div>
                                                        <strong><%= detail.name.toUpperCase() %></strong> 
                                                        <span class="text-muted"><%= detail.phone %></span>
                                                        <p class="mb-0 text-muted mt-1" style="font-size: 0.95rem; line-height: 1.4;">
                                                            <%= detail.addressLine1 %>, <%= detail.addressLine2 %>,<br>
                                                            <%= detail.city %>, <%= detail.state %> - <%= detail.pincode %>
                                                            <% if (detail.landmark) { %>
                                                                <br>Landmark: <%= detail.landmark %>
                                                            <% } %>
                                                        </p>
                                                        <% if (detail.altPhone) { %>
                                                            <p class="mb-0 text-muted" style="font-size: 0.95rem;">
                                                                Alt Phone: <%= detail.altPhone %>
                                                            </p>
                                                        <% } %>
                                                    </div>
                                                    <div class="d-flex align-items-center gap-2">
                                                        <span class="badge">
                                                            <%= detail.addressType.charAt(0).toUpperCase() + detail.addressType.slice(1) %>
                                                        </span>
                                                        <div class="dropdown">
                                                            <button class="btn btn-light border-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                                <i class="fa-solid fa-ellipsis-vertical"></i>
                                                            </button>
                                                            <ul class="dropdown-menu">
                                                                <li>
                                                                    <button class="btn edit-address-btn"
                                                                        type="button"
                                                                        data-id="<%= detail._id %>"
                                                                        data-fullname="<%= detail.name %>"
                                                                        data-phone="<%= detail.phone %>"
                                                                        data-addressline1="<%= detail.addressLine1 %>"
                                                                        data-addressline2="<%= detail.addressLine2 %>"
                                                                        data-landmark="<%= detail.landmark %>"
                                                                        data-city="<%= detail.city %>"
                                                                        data-state="<%= detail.state %>"
                                                                        data-zipcode="<%= detail.pincode %>"
                                                                        data-altnumber="<%= detail.altNumber %>"
                                                                        data-type="<%= detail.addressType %>"
                                                                        data-index="<%= index %>"
                                                                        data-bs-toggle="modal"
                                                                        data-bs-target="#editAddressModal">
                                                                        Edit
                                                                    </button>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                            </label>
                                        </div>
                                    </div>
                                <% }) %>
                            <% }) %>
                            <a href="#" data-bs-toggle="modal" class="d-block add-address text-decoration-none" id="addAddressLink" data-bs-target="#addAddressModal">
                                <i class="fas fa-plus me-2"></i>Add a new address
                            </a>
                        <% } else { %>
                            <div class="text-center py-5">
                                <i class="fa-solid fa-map-location-dot fa-3x mb-3" style="color: var(--secondary);"></i>
                                <p class="fs-5 text-muted">No addresses found. Add a new address to get started!</p>
                                <a href="#" data-bs-toggle="modal" class="d-block add-address" id="addAddressLink" data-bs-target="#addAddressModal">
                                    <i class="fas fa-plus me-2"></i>Add a new address
                                </a>
                            </div>
                        <% } %>
                    </div>

                    <!-- Order Summary -->
                    <div class="col-lg-4">
                        <div class="card p-3 shadow-sm border-0 order-summary">
                            <h5 class="fw-bold text-dark mb-4">Order Summary</h5>
                            <% if (cart && cart.items && cart.items.length > 0) { %>

                                <% let total = calculatedValues.cartTotal; %>
                                <% let deliveryCharge = calculatedValues.deliveryCharge; %>
                                <% let grandTotal = calculatedValues.grandTotal; %>

                                <% cart.items.forEach(item => { %>
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-muted text-truncate" 
                                            style="font-size: 0.95rem; max-width: 70%; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                            <%= item.quantity %>x <%= item.productId.name %>
                                        </span>
                                        <span class="text-dark fw-medium flex-shrink-0">
                                            ₹ <%= (item.quantity * item.price).toLocaleString('en-IN') %>
                                        </span>
                                    </div>
                                <% }) %>
                    
                                <!-- Delivery Charges -->
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="text-muted" style="font-size: 0.95rem;">Delivery Charges</span>
                                    <span class="<%= deliveryCharge ? 'text-danger' : 'text-success' %> flex-shrink-0">
                                        <%= deliveryCharge ? `₹ ${deliveryCharge}` : 'Free' %>
                                    </span>
                                </div>

                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="text-muted" style="font-size: 0.95rem;" id="couponText"></span>
                                    <span class="text-success" id="couponValue"></span>
                                </div>
                                
                                <hr class="my-2" style="border-color: #E0E0E0;">
                    
                                <!-- Coupon Code -->
                                <div class="mb-2">
                                    <label for="coupon" class="form-label fw-medium" style="font-size: 0.9rem;">Coupon Code</label>
                                    <div class="input-group coupon-input">
                                        <input type="text" id="coupon" name="coupon" class="form-control form-control-sm px-3" 
                                            placeholder="Enter coupon code" 
                                            style="border-radius: 6px 0 0 6px; height: 52px; font-size: 0.9rem;">
                                            <input type="hidden" id="couponDiscount" name="couponDiscount" value="0">
                                            <input type="hidden" id="couponId" name="couponId" value="">
                                        <button class="btn btn-outline-secondary btn-sm apply-coupon" type="button" 
                                            style="border-radius: 0 6px 6px 0; height: 52px; font-size: 0.9rem;">
                                            Apply
                                        </button>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div id="couponStatus" class="coupon-status"></div>
                                        <div id="appliedCoupon" class="applied-coupon-tag d-none">
                                        <span class="remove-coupon-sm">
                                            <i class="fas fa-times"></i>
                                        </span>
                                    </div>
                                    </div>
                                    <a href="#" data-bs-toggle="modal" id="availableCouponLink" data-bs-target="#availableCouponsModal" class="view-coupons-link text-decoration-none">
                                        View Available Coupons
                                    </a>                                    
                                </div>
                    
                                <hr class="my-2" style="border-color: #E0E0E0;">
                    
                                <!-- Total Amount (Including GST and Delivery) -->
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="fw-bold text-dark" style="font-size: 1.2rem;">Total</span>
                                    <span class="fw-bold text-dark flex-shrink-0" style="font-size: 1.2rem;">
                                        ₹ <%= grandTotal.toLocaleString('en-IN') %>
                                    </span>
                                </div>
                    
                                <input type="hidden" name="userId" value="<%= user._id %>">
                                <button type="submit" class="btn checkout-btn w-100 mt-4" id="proceedToPayment"
                                    <%= (cart.items.length === 0 || address.length === 0) ? 'disabled' : '' %>>
                                    Proceed to Payment
                                </button>
                            <% } else { %>
                                <p class="text-muted text-center fs-5">No items in your cart.</p>
                            <% } %>
                        </div>
                    </div>                                        
                </div>
            </form>
        </div>

        <!-- Available Coupons Modal -->
        <div class="modal fade" id="availableCouponsModal" tabindex="-1" aria-labelledby="availableCouponsModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content border-0 rounded-4">
                    <div class="modal-header text-white" style="background-color: var(--secondary); height: 50px;">
                        <h5 class="modal-title fw-bold text-white" id="couponsModalLabel">Available Coupons</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="modal-body">
                        <% if (coupons && coupons.length > 0) { %>
                            <% coupons.forEach((coupon) => { %>
                                <div class="coupon-card border p-3 mb-3 rounded-3 shadow-sm">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="fw-bold mb-1"><%= coupon.name %></h6>
                                            <p class="text-muted mb-1" style="font-size: 0.9rem;"><%= coupon.description %></p>
                                            <p class="text-muted mb-0" style="font-size: 0.85rem;">
                                                Min Price: ₹ <%= coupon.minPrice.toLocaleString('en-IN') %>
                                            </p>
                                        </div>
                                        <div class="text-end">
                                            <button class="btn btn-outline-secondary btn-sm copy-btn" 
                                                data-code="<%= coupon.code %>" style="font-size: 0.85rem;">
                                                Copy Code
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <p class="text-muted text-center">No available coupons at the moment.</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

