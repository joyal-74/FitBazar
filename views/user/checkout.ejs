<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg shadow-sm">
        <div class="container d-flex flex-column">
            <div class="d-flex w-100 justify-content-between align-items-center">
                <a class="navbar-brand fw-bold" href="#">FitBazar</a>
                <ul class="nav align-items-center">
                    <li class="nav-item"><a class="nav-link text-white btn py-1 px-4 user-nav-text" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="/shop">Shop</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="#">Deals/Offers</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="#">About Us</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="#">Customer Support</a></li>
                </ul>
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn" type="submit" style="background-color: #E0DBFC;">
                        <i class="fa-solid fa-magnifying-glass" style="color: black;"></i>
                    </button>
                </form>
                <div class="d-flex align-items-center">
                    <a href="#" class="me-3 text-white"><i class="fa-solid fa-heart fa-lg"></i></a>
                    <a href="#" class="me-3 text-white"><i class="fa-solid fa-cart-shopping fa-lg"></i></a>
                    <% if (user) { %>
                        <a href="#" class="btn btn-light" style="color: #3B3389; border-radius: 50%;">
                            <i class="fa-solid fa-user"></i>
                        </a>
                    <% } else { %>
                        <a href="/user/register" class="btn btn-light" style="color: #3B3389;">Sign Up</a>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>

    <!-- Progress Bar -->
    <div class="container mt-4">
        <div class="d-flex justify-content-center align-items-center">
            <!-- Cart -->
            <div class="d-flex align-items-center me-3">
                <i class="fas fa-shopping-cart text-warning me-2"></i>
                <span class="fw-bold">Cart</span>
            </div>
            <i class="fas fa-arrow-right text-primary me-3"></i>
            <!-- Shipping -->
            <div class="d-flex align-items-center me-3">
                <i class="fas fa-truck text-primary me-2"></i>
                <span class="text-primary fw-bold">Shipping</span>
            </div>
            <i class="fas fa-arrow-right text-secondary me-3"></i>
            <!-- Payments -->
            <div class="d-flex align-items-center">
                <i class="fas fa-credit-card text-secondary me-2"></i>
                <span class="fw-bold">Payments</span>
            </div>
        </div>
    </div>

    <main class="container mt-4">
        <div class="row g-4">
            <!-- Delivery Address Section -->
            <div class="col-md-8">
                <h4 class="fw-bold mb-4">Select Delivery Address</h4>
                <div class="card p-4 mb-3 border-0 shadow-sm" style="background-color: #F8F8F8;">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="address" id="address1" checked>
                        <label class="form-check-label w-100" for="address1">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>JOYAL KURIAKOSE</strong> 7306950587
                                    <p class="mb-0 text-muted" style="font-size: 14px;">
                                        Thekkemathoor (h) Pasukkadave (po) kavilumpara (via) Kozhikode (dist),<br>
                                        Pasukkadave, Pasukkadave, Kerala - 673513
                                    </p>
                                </div>
                                <span class="badge bg-secondary">Home</span>
                            </div>
                        </label>
                    </div>
                </div>
                
                <div class="card p-4 mb-3 border-0 shadow-sm" style="background-color: #F8F8F8;">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="address" id="address2">
                        <label class="form-check-label w-100" for="address2">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>JOYAL KURIAKOSE</strong> 7306950587
                                    <p class="mb-0 text-muted" style="font-size: 14px;">
                                        Thekkemathoor (h) Pasukkadave (po) kavilumpara (via) Kozhikode (dist),<br>
                                        Pasukkadave, Pasukkadave, Kerala - 673513
                                    </p>
                                </div>
                                <span class="badge bg-secondary">Work</span>
                            </div>
                        </label>
                    </div>
                </div>

                <a href="#" class="d-block text-primary mt-3">
                    <i class="fas fa-plus me-2"></i>Add a new address
                </a>
            </div>

            <!-- Order Summary -->
            <div class="col-md-4">
                <div class="card p-4 shadow-sm border-0" style="background-color: #F8F8F8;">
                    <h5 class="fw-bold mb-4">Order Summary</h5>
                    <div class="d-flex justify-content-between mb-2">
                        <span>1x Dumbbell - 20 kg</span>
                        <span>₹ 2199</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>2x Kettlebells - 15 kg</span>
                        <span>₹ 3689</span>
                    </div>
                    <hr>
                    <div class="mb-3">
                        <label for="coupon" class="form-label">Enter Coupon Code</label>
                        <div class="input-group">
                            <input type="text" id="coupon" class="form-control" placeholder="Paste your code here">
                            <button class="btn btn-outline-secondary" type="button">Apply</button>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span class="fw-bold">Total</span>
                        <strong>₹ 5818</strong>
                    </div>
                    <button class="btn btn-primary w-100 mt-3" style="background-color: #6C5DD3; border: none;">
                        Proceed to Payment
                    </button>
                </div>
            </div>
        </div>
    </main>
</body>