<body>
    <!-- Navbar -->
    <%- include('../partials/userNavbar', { activePage: '' }) %> 

    <main class="container mt-4">
        <div class="row g-5">

            <%- include('../partials/profileSidebar', { activePage: 'profile' }) %> 

            <!-- Optimized Profile Display -->
            <div class="col-md-9 col-lg-10 col-xl-9 mt-5 p-4">
                <div class="profile-section">
                    <div class="profile-header d-flex flex-column flex-md-row align-items-center align-items-md-start justify-content-between mb-4">
                        <div class="d-flex flex-column flex-md-row align-items-center text-center text-md-start mb-3 mb-md-0">
                            <img src="<%= user.profilePic || '/placeholder.jpg' %>" alt="Profile Picture"
                                class="profile-avatar me-md-3 mb-2 mb-md-0" width="80" height="80">
                            <div>
                                <h4 style="color: #3C1549; margin: 0;">
                                    <%= user.name %>
                                </h4>
                                <div class="mt-1"><small class="text-muted">Member since <%= new Date(user.createdAt).toLocaleDateString() %></small></div>
                            </div>
                        </div>
                        <a href="/user/profileU?userId=<%= user.userId %>" class="btn btn-primary d-flex align-items-center justify-content-center gap-2">
                            <i class="fa-solid fa-pen"></i>
                            <span class="d-none d-md-inline">Edit Profile</span>
                        </a>
                    </div>

                    <div class="info-grid mt-4">
                        <div class="info-item mb-3">
                            <div class="info-label">Email Address</div>
                            <div class="info-value text-break">
                                <%= user.email %>
                            </div>
                        </div>
                        <div class="info-item mb-3">
                            <div class="info-label">Mobile Number</div>
                            <div class="info-value">
                                <%= user.phone || 'Not provided' %>
                            </div>
                        </div>
                        <div class="info-item mb-3">
                            <div class="info-label">Gender</div>
                            <div class="info-value">
                                <%= user.gender || 'Not specified' %>
                            </div>
                        </div>
                        <div class="info-item mb-3">
                            <div class="info-label">Username</div>
                            <div class="info-value">
                                <%= user.username || 'Username not set yet' %>
                            </div>
                        </div>
                    </div>


                    <!-- Referral Section -->
                    <div class="referral-section mt-4 pt-4 border-top">
                        <div class="row">
                            <div class="col-12 col-md-6 mb-3 mb-md-0">
                                <h6 style="color: #3C1549;">Refer a Friend</h6>
                                <p class="text-muted">Share your referral code with friends and earn rewards!</p>   
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="input-group">
                                    <input type="text" 
                                          class="form-control" 
                                          value="<%= user.referalCode %>" 
                                          id="referralCode" 
                                          readonly 
                                          style="font-size: 0.8rem; padding: 0px 15px; height: 40px; line-height: 1;">
                                    <button class="btn admin-btns text-white" 
                                            onclick="copyReferralCode()" 
                                            style="font-size: 0.75rem; padding: 0px 8px; height: 40px; line-height: 1;">
                                        <i class="fa-solid fa-copy me-1"></i><span class="d-none d-sm-inline">Copy</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        function copyReferralCode() {
            const referralCode = document.getElementById('referralCode');
            referralCode.select();
            document.execCommand('copy');
            alert('Referral code copied to clipboard!');
        }
    </script>
</body>