<head>
    <style>
        :root {
            --primary: #5B3F64;
            --primary-dark: #3C1549;
            --accent: #d8c5d6;
            --danger: #dc3545;
        }
        
        /* Minimal custom CSS */
        .btn-primary {
            background-color: var(--primary);
            border-color: var(--primary-dark);
        }
        .btn-primary:hover {
            background-color: var(--primary-dark);
        }
        .checkout-btn {
            background: linear-gradient(90deg, #5B3F64, #3C1549);
        }
        .progress-step.active {
            color: var(--primary);
            font-weight: 600;
        }
        .order-summary {
            position: sticky;
            top: 20px;
        }
        .toast {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 1000;
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.3s ease;
        }
        .toast.show {
            opacity: 1;
            transform: translateY(0);
        }
        
        /* Custom quantity button styles */
        .quantity-controls {
            display: flex;
            align-items: center;
        }
        .qty-btn {
            width: 28px;
            height: 28px;
            border-radius: 50%;
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--primary);
            font-size: 0.9rem;
            transition: all 0.2s ease;
        }
        .qty-btn:hover {
            background-color: var(--primary);
            color: white;
            border-color: var(--primary);
        }
        .qty-value {
            min-width: 36px;
            text-align: center;
            font-weight: 500;
        }
        
        /* Mobile quantity buttons */
        .mobile-qty-btn {
            width: 24px;
            height: 24px;
            border-radius: 4px;
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0;
        }
        .mobile-qty-value {
            min-width: 30px;
            text-align: center;
            font-size: 0.9rem;
            font-weight: 500;
            margin: 0 2px;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <%- include('../partials/userNavbar', { activePage: '' }) %> 

    <!-- Main Section -->
    <main class="container my-4 my-md-5">
        <!-- Cart Header with Progress -->
        <div class="border-0 mb-4 p-3">
            <div class="d-flex justify-content-between flex-wrap">
                <h4 class="fw-bold mb-3 mb-md-0">Your Shopping Cart</h4>
                
                <!-- Progress Steps -->
                <div class="d-flex align-items-center gap-2">
                    <div class="progress-step active d-flex align-items-center">
                        <i class="fas fa-shopping-cart me-1"></i>
                        <span class="d-none d-sm-inline">Cart</span>
                    </div>
                    <i class="fas fa-chevron-right text-muted mx-1 mx-md-2"></i>
                    <div class="progress-step d-flex align-items-center text-muted">
                        <i class="fas fa-truck me-1"></i>
                        <span class="d-none d-sm-inline">Shipping</span>
                    </div>
                    <i class="fas fa-chevron-right text-muted mx-1 mx-md-2"></i>
                    <div class="progress-step d-flex align-items-center text-muted">
                        <i class="fas fa-credit-card me-1"></i>
                        <span class="d-none d-sm-inline">Payment</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Cart Section -->
        <div class="row g-4">
            <!-- Cart Items -->
            <div class="col-lg-8">
                <% if (cart && cart.items && cart.items.length > 0) { %>
                    <% cart.items.forEach(item => { %>
                        <!-- Desktop Card (hidden on xs and sm screens) -->
                        <div class="card mb-3 border-0 shadow-sm d-none d-md-block">
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <!-- Product Image -->
                                    <div class="col-md-2 text-center">
                                        <img src="<%= item.productImage %>" alt="<%= item.productId.name %>"
                                            class="img-fluid rounded" style="max-height: 80px; object-fit: contain;">
                                    </div>
                                    
                                    <!-- Product Details -->
                                    <div class="col-md-5">
                                        <h6 class="mb-1"><%= item.productId.name %></h6>
                                        <p class="text-muted small mb-0">
                                            <%= item.variants.color %> | <%= item.variants?.weight || "" %>
                                        </p>
                                    </div>
                                    
                                    <!-- Quantity Controls - REDESIGNED -->
                                    <div class="col-md-3">
                                        <div class="quantity-controls">
                                            <button class="qty-btn" type="button"
                                                onclick="updateQuantity('<%= item.productId._id %>', -1, '<%= item.variants?.color %>', '<%= item.variants?.weight %>')">
                                                <i class="fa-solid fa-minus"></i>
                                            </button>
                                            <span class="qty-value mx-2"><%= item.quantity %></span>
                                            <button class="qty-btn" type="button"
                                                onclick="updateQuantity('<%= item.productId._id %>', 1, '<%= item.variants?.color %>', '<%= item.variants?.weight %>')">
                                                <i class="fa-solid fa-plus"></i>
                                            </button>
                                        </div>
                                    </div>
                                    
                                    <!-- Price and Remove Button -->
                                    <div class="col-md-2 text-end">
                                        <div class="fw-bold mb-1">₹<%= item.price * item.quantity %></div>
                                        <del class="text-muted small">₹<%= item.basePrice * item.quantity %></del>
                                        <button class="btn btn-sm text-danger border-0 p-0 ms-2"
                                            onclick="removeFromCart('<%= item.productId._id %>','<%= item.variants?.color %>', '<%= item.variants?.weight %>')">
                                            <i class="fa-solid fa-trash-can"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Mobile Card (shown only on xs and sm screens) -->
                        <div class="card mb-3 border-0 shadow-sm d-md-none">
                            <div class="card-body p-2">
                                <div class="row g-2">
                                    <!-- Left: Product Image -->
                                    <div class="col-3">
                                        <img src="<%= item.productImage %>" alt="<%= item.productId.name %>"
                                            class="img-fluid rounded" style="width: 100%; object-fit: cover;">
                                    </div>
                                    
                                    <!-- Right: Product Details -->
                                    <div class="col-9">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <h6 class="mb-0 text-truncate pe-2" style="max-width: 85%;">
                                                <%= item.productId.name %>
                                            </h6>
                                            <button class="btn btn-sm p-0 text-danger" 
                                                onclick="removeFromCart('<%= item.productId._id %>','<%= item.variants?.color %>', '<%= item.variants?.weight %>')">
                                                <i class="fa-solid fa-times"></i>
                                            </button>
                                        </div>
                                        
                                        <p class="text-muted small mb-1">
                                            <%= item.variants.color %> | <%= item.variants?.weight || "" %>
                                        </p>
                                        
                                        <div class="d-flex justify-content-between align-items-center mt-2">
                                            <div>
                                                <span class="fw-bold">₹<%= item.price.toLocaleString('en-IN') %></span>
                                                <del class="text-muted small ms-1">₹<%= item.basePrice.toLocaleString('en-IN') %></del>
                                            </div>
                                            
                                            <!-- Mobile Quantity Controls - REDESIGNED -->
                                            <div class="d-flex align-items-center">
                                                <button class="mobile-qty-btn" type="button"
                                                    onclick="updateQuantity('<%= item.productId._id %>', -1, '<%= item.variants?.color %>', '<%= item.variants?.weight %>')">
                                                    <i class="fa-solid fa-minus small"></i>
                                                </button>
                                                <span class="mobile-qty-value"><%= item.quantity %></span>
                                                <button class="mobile-qty-btn" type="button"
                                                    onclick="updateQuantity('<%= item.productId._id %>', 1, '<%= item.variants?.color %>', '<%= item.variants?.weight %>')">
                                                    <i class="fa-solid fa-plus small"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="border-0 text-center p-5">
                        <div class="card-body">
                            <i class="fa-solid fa-cart-shopping text-muted mb-3" style="font-size: 2rem;"></i>
                            <p class="text-muted fs-5">Your cart is empty!</p>
                            <a href="/shop" class="btn btn-primary mt-2 px-4">
                                Start Shopping
                            </a>
                        </div>
                    </div>
                <% } %>
                
                <input type="hidden" id="userId" value="<%= user._id %>">
            </div>

            <!-- Order Summary -->
            <div class="col-lg-4 mb-5">
                <% if (cart && cart.items && cart.items.length > 0) { %>
                <div class="card border-0 shadow-sm order-summary">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-4">Order Summary</h5>
                        
                        
                            <% 
                                let total = 0;
                                cart.items.forEach(item => { 
                                    total += item.quantity * item.price;
                                });
                                let deliveryCharge = total < 499 ? 39 : 0;
                                let grandTotal = total + deliveryCharge;
                            %>
                            
                            <!-- Items Summary -->
                            <% cart.items.forEach(item => { %>
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="text-muted text-truncate" style="max-width: 70%;">
                                        <%= item.quantity %>x <%= item.productId.name %>
                                    </span>
                                    <span class="text-dark">
                                        ₹<%= (item.quantity * item.price).toLocaleString('en-IN') %>
                                    </span>
                                </div>
                            <% }) %>
                            
                            <!-- Delivery & Total -->
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-muted">Delivery Charges</span>
                                <span class="<%= deliveryCharge ? 'text-danger' : 'text-success' %>">
                                    <%= deliveryCharge ? `₹${deliveryCharge}` : 'Free' %>
                                </span>
                            </div>
                            
                            <hr class="my-3">
                            
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <span class="fw-bold">Total</span>
                                <span class="fw-bold fs-5">
                                    ₹<%= grandTotal.toLocaleString('en-IN') %>
                                </span>
                            </div>
                            
                            <button class="btn checkout-btn w-100 text-white py-2"
                                onclick="goToCheckout('<%= cart._id %>', '<%= user._id %>')">
                                Continue to Checkout
                            </button>
                            
                            <% if (deliveryCharge > 0) { %>
                                <div class="text-center mt-3">
                                    <small class="text-muted">
                                        Add items worth ₹<%= (499 - total).toLocaleString('en-IN') %> more for free delivery
                                    </small>
                                </div>
                            <% } %>
                    </div>
                </div>
                <% } else { %>
                    <div class="card border-0 shadow-sm order-summary">
                        <div class="card-body p-4">
                    <p class="text-muted text-center">No items in your cart</p>

                        </div>
                    </div>
                <% } %>
            </div>
        </div>

    </main>

    <script>
        // Update Quantity
        async function updateQuantity(productId, change, color, weight) {
            try {
                const response = await fetch('/user/cart', {
                    method: 'PATCH',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ productId, change, color, weight })
                });

                const data = await response.json();

                if (response.ok) {
                    window.location.reload();
                } else {
                    Swal.fire({
                        text : data.error  || 'Qantity already at its minimum',
                        icon: "warning"
                    })
                }
            } catch (error) {
                console.error('Error updating quantity:', error);
                Swal.fire({
                    text: "Error updating quantity",
                    icon: "error"
                });
            }
        }

        // Remove from Cart
        async function removeFromCart(productId, color, weight) {
            const userId = document.getElementById('userId').value;

            const result = await Swal.fire({
                text: "Remove this item from your cart?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, remove it',
                cancelButtonText: 'Cancel'
            });

            if (result.isConfirmed) {
                try {
                    const response = await fetch(`/user/cart?userId=${userId}`, {
                        method: 'DELETE',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ productId, color, weight })
                    });

                    if (response.ok) {
                        Swal.fire({
                            text: "Item removed from cart",
                            icon: "success"
                        }).then(()=>{
                            window.location.reload();
                        })
                    } else {
                        Swal.fire({
                            text: "Failed to remove item from cart",
                            icon: "error"
                        }).then(()=>{
                            window.location.reload();
                        })
                    }
                } catch (error) {
                    console.error('Error removing from cart:', error);
                    Swal.fire({
                        text: error || "Somethinf went wrong",
                        icon: "error"
                    });
                }
            }
        }

        // Go to Checkout
        function goToCheckout(cartId, userId) {
            window.location.href = `/user/checkout?cartId=${cartId}&userId=${userId}`;
        }
    </script>
</body>