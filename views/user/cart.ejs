<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg shadow-sm bg-white">
        <div class="container">
            <!-- Brand Logo -->
            <a class="navbar-brand fw-bold fs-4" href="#" style="color: #3B3389;">FitBazar</a>

            <!-- Toggle Button for Offcanvas -->
            <button class="navbar-toggler border-0 shadow-sm" type="button" data-bs-toggle="offcanvas" data-bs-target="#navbarOffcanvas" aria-controls="navbarOffcanvas">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Offcanvas Navbar -->
            <div class="offcanvas offcanvas-end" tabindex="-1" id="navbarOffcanvas" aria-labelledby="navbarOffcanvasLabel">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title fw-bold" id="navbarOffcanvasLabel" style="color: #3B3389;">FitBazar</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>

                <div class="offcanvas-body">
                    <ul class="navbar-nav me-auto align-items-lg-center gap-2">
                        <li class="nav-item">
                            <a class="nav-link text-white py-2 px-3" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white py-2 px-3" href="/shop">Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white py-2 px-3" href="#">Deals/Offers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white py-2 px-3" href="#">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white py-2 px-3" href="#">Customer Support</a>
                        </li>
                    </ul>

                    <!-- Search Form -->
                    <form class="d-flex mt-3 mt-lg-0">
                        <input class="form-control me-2 border-0 shadow-sm" type="search" placeholder="Search" aria-label="Search" style="border-radius: 20px;">
                        <button class="btn" type="submit" style="background-color: #E0DBFC; border-radius: 20px;">
                            <i class="fa-solid fa-magnifying-glass" style="color: black;"></i>
                        </button>
                    </form>

                    <!-- Icons and User Section -->
                    <div class="d-flex align-items-center mt-3 mt-lg-0">
                        <a href="#" class="mx-3 text-white"><i class="fa-solid fa-heart fa-lg"></i></a>
                        <a href="#" class="me-3 text-white"><i class="fa-solid fa-cart-shopping fa-lg"></i></a>
                        <% if (user) { %>
                            <a href="#" class="btn btn-light" style="color: #3B3389; border-radius: 50%;">
                                <i class="fa-solid fa-user"></i>
                            </a>
                        <% } else { %>
                            <a href="/user/register" class="btn btn-outline-primary" style="border-radius: 20px;">Sign Up</a>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </nav>


    <main class="container mt-5">
        <h3 class="fw-bold">Discover items in your cart</h3>

        <div class="row g-4">
            <!-- Cart Section -->
            <div class="col-md-8">
                <!-- Cart Item 1 -->
                <div class="card p-3 mb-3 shadow-sm border-0 rounded" style="background-color: #F8F8F8;">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <img src="/product1.jpg" alt="Dumbbell" class="rounded me-3" width="80" height="80">
                            <div>
                                <strong>Dumbbell - 20 kg</strong>
                                <p class="mb-0">₹ 2199</p>
                            </div>
                        </div>
                        <div class="d-flex align-items-center gap-2">
                            <button class="btn btn-outline-secondary">-</button>
                            <span class="px-3 py-1 border rounded">1</span>
                            <button class="btn btn-outline-secondary">+</button>
                            <strong>₹ 2199</strong>
                        </div>
                        <button class="btn btn-primary" style="background-color: #6C5DD3; border: none;">Remove</button>
                    </div>
                </div>

                <!-- Cart Item 2 -->
                <div class="card p-3 mb-3 shadow-sm border-0 rounded" style="background-color: #F8F8F8;">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <img src="/product2.jpg" alt="Kettlebell" class="rounded me-3" width="80" height="80">
                            <div>
                                <strong>Kettlebell - 15 kg</strong>
                                <p class="mb-0">₹ 1699</p>
                            </div>
                        </div>
                        <div class="d-flex align-items-center gap-2">
                            <button class="btn btn-outline-secondary">-</button>
                            <span class="px-3 py-1 border rounded">2</span>
                            <button class="btn btn-outline-secondary">+</button>
                            <strong>₹ 3689</strong>
                        </div>
                        <button class="btn btn-primary" style="background-color: #6C5DD3; border: none;">Remove</button>
                    </div>
                </div>
                <div class="card p-3 mb-3 shadow-sm border-0 rounded" style="background-color: #F8F8F8;">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <img src="/product2.jpg" alt="Kettlebell" class="rounded me-3" width="80" height="80">
                            <div>
                                <strong>Kettlebell - 15 kg</strong>
                                <p class="mb-0">₹ 1699</p>
                            </div>
                        </div>
                        <div class="d-flex align-items-center gap-2">
                            <button class="btn btn-outline-secondary">-</button>
                            <span class="px-3 py-1 border rounded">2</span>
                            <button class="btn btn-outline-secondary">+</button>
                            <strong>₹ 3689</strong>
                        </div>
                        <button class="btn btn-primary" style="background-color: #6C5DD3; border: none;">Remove</button>
                    </div>
                </div>
            </div>
            

            <!-- Order Summary -->
            <div class="col-md-4">
                <div class="card p-4 shadow-sm border-0 rounded gap-3" style="background-color: #F0F0F0;">
                    <h5 class="fw-bold">Order Summary</h5>
                    <div class="d-flex justify-content-between">
                        <span>1x Dumbbell - 20 kg</span>
                        <span>₹ 2199</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>2x Kettlebells - 15 kg</span>
                        <span>₹ 3689</span>
                    </div>
                    <div class="d-flex justify-content-between text-success">
                        <span>Delivery Charges</span>
                        <span>₹ Free</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Platform Fee</span>
                        <span>₹ 0</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <span class="fw-bold">Total</span>
                        <strong>₹ 5818</strong>
                    </div>
                    <button class="btn btn-primary w-100 mt-3" style="background-color: #6C5DD3; border: none;">Continue</button>
                </div>
            </div>
        </div>
    </main>
</body>
