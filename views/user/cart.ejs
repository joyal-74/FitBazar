<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg shadow-sm bg-white">
        <div class="container">
            <a class="navbar-brand fw-bold fs-4" href="#" style="color: #3B3389;">FitBazar</a>
            <button class="navbar-toggler border-0 shadow-sm" type="button" data-bs-toggle="offcanvas" data-bs-target="#navbarOffcanvas">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="offcanvas offcanvas-end" tabindex="-1" id="navbarOffcanvas">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title fw-bold" style="color: #3B3389;">FitBazar</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
                </div>
                <div class="offcanvas-body">
                    <ul class="navbar-nav me-auto gap-2">
                        <li class="nav-item"><a class="nav-link text-white py-2 px-3" href="/">Home</a></li>
                        <li class="nav-item"><a class="nav-link text-white py-2 px-3" href="/shop">Shop</a></li>
                        <li class="nav-item"><a class="nav-link text-white py-2 px-3" href="#">Deals/Offers</a></li>
                        <li class="nav-item"><a class="nav-link text-white py-2 px-3" href="#">About Us</a></li>
                        <li class="nav-item"><a class="nav-link text-white py-2 px-3" href="#">Customer Support</a></li>
                    </ul>

                    <form class="d-flex">
                        <input class="form-control me-2" type="search" placeholder="Search">
                        <button class="btn" type="submit" style="background-color: #E0DBFC;">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </button>
                    </form>

                    <div class="d-flex align-items-center">
                        <a href="#" class="mx-3 text-white"><i class="fa-solid fa-heart fa-lg"></i></a>
                        <a href="/user/cart" class="me-3 text-white"><i class="fa-solid fa-cart-shopping fa-lg"></i></a>
                        <% if (user) { %>
                            <a href="/user/profile" style="color: #3B3389;">
                                <% if (user.profilePic) { %>
                                    <img src="<%= user.profilePic %>" alt="Profile Picture" style="width: 40px; height: 40px; border-radius: 50%;">
                                <% } else { %>
                                    <i class="fa-solid fa-user" style="font-size: 24px;"></i>
                                <% } %>
                            </a>
                        <% } else { %>
                            <a href="/user/register" class="btn btn-light" style="color: #3B3389;">Sign Up</a>
                        <% } %> 
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Section -->
    <main class="container mt-5">
        <h3 class="fw-bold mb-4 text-dark">Discover Items in Your Cart</h3>

        <div class="row g-4">
            <!-- Cart Section -->
            <div class="col-md-8">
                <% if (cart && cart.items && cart.items.length > 0) { %>
                    <% cart.items.forEach(item => { %>
                        <div class="card mb-3 shadow-sm border-0 rounded-3 overflow-hidden" style="background-color: #FFFFFF; transition: transform 0.2s;">
                            <div class="row g-0 align-items-center p-3">
                                <div class="col-3 col-md-2">
                                    <img src="<%= item.productImage %>" alt="<%= item.productId.name %>" class="img-fluid rounded" style="max-width: 100px; object-fit: cover;">
                                </div>
                                <div class="col-9 col-md-10">
                                    <div class="d-flex justify-content-between align-items-center flex-wrap">
                                        <div>
                                            <h6 class="fw-bold mb-1 text-dark"><%= item.productId.name %></h6>
                                            <p class="text-muted mb-1 small"><%= item.variants %></p>
                                            <p class="mb-0 text-primary fw-semibold">₹ <%= item.price %></p>
                                        </div>
                                        <div class="d-flex align-items-center gap-3">
                                            <div class="input-group input-group-sm" style="width: 120px;">
                                                <button class="btn btn-outline-secondary" onclick="updateQuantity('<%= item.productId._id %>', -1)" style="border-radius: 8px 0 0 8px;">-</button>
                                                <input type="text" class="form-control text-center" value="<%= item.quantity %>" readonly style="border-radius: 0; max-width: 50px;">
                                                <button class="btn btn-outline-secondary" onclick="updateQuantity('<%= item.productId._id %>', 1)" style="border-radius: 0 8px 8px 0;">+</button>
                                            </div>
                                            <p class="mb-0 fw-bold text-dark">₹ <%= item.quantity * item.price %></p>
                                            <button class="btn btn-outline-danger btn-sm rounded-circle" onclick="removeFromCart('<%= item.productId._id %>')" style="width: 36px; height: 36px;">
                                                <i class="fa-solid fa-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="text-center py-5">
                        <i class="fa-solid fa-cart-shopping fa-3x text-muted mb-3"></i>
                        <p class="text-muted fs-5">Your cart is empty!</p>
                        <a href="/shop" class="btn btn-primary mt-2" style="background-color: #6C5DD3;">Start Shopping</a>
                    </div>
                <% } %>
            </div>

            <!-- Order Summary -->
            <div class="col-md-4">
                <div class="card p-4 shadow-sm border-0 rounded-3" style="background-color: #F9F9F9;">
                    <h5 class="fw-bold text-dark mb-3">Order Summary</h5>
                    <% if (cart && cart.items && cart.items.length > 0) { %>
                        <% let total = 0; %>
                        <% cart.items.forEach(item => { %>
                            <% total += item.quantity * item.price; %>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted"><%= item.quantity %>x <%= item.productId.name %></span>
                                <span class="text-dark">₹ <%= item.quantity * item.price %></span>
                            </div>
                        <% }) %>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Delivery Charges</span>
                            <span class="text-success fw-semibold">Free</span>
                        </div>
                        <hr class="my-3">
                        <div class="d-flex justify-content-between">
                            <span class="fw-bold text-dark">Total</span>
                            <span class="fw-bold text-dark">₹ <%= total %></span>
                        </div>
                        <button class="btn btn-primary w-100 mt-4" style="background-color: #6C5DD3; border-radius: 10px; padding: 12px;">Continue to Checkout</button>
                    <% } else { %>
                        <p class="text-muted text-center">No items in your cart.</p>
                    <% } %>
                </div>
            </div>
        </div>
    </main>

    <script>
        // Update Quantity
        async function updateQuantity(productId, change) {
            const response = await fetch('/user/cart', {
                method: 'PATCH',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ productId, change })
            });
            if (response.ok) window.location.reload();
        }

        // Remove Item
        async function removeFromCart(productId) {
            const response = await fetch('/user/cart', {
                method: 'DELETE',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ productId })
            });
            if (response.ok) window.location.reload();
        }
    </script>
</body>
