<head>
    <style>
        /* Sidebar container */
        .sidebar-profile {
            background-color: #ffffff;
            border-radius: 12px;
            padding: 20px;
        }

        /* Sidebar section heading */
        .sidebar-heading {
            font-size: 14px;
            font-weight: 600;
            color: #555;
            margin: 18px 0;
            display: block;
        }

        /* Sidebar link styles */
        .sidebar-linkz {
            color: #333;
            padding: 12px 14px;
            font-size: 15px;
            font-weight: 500;
            border-radius: 8px;
            transition: background-color 0.3s ease;
            display: flex;
            align-items: center;
        }

        .sidebar-linkz i {
            width: 20px;
            color: #3b3389;
        }

        /* Hover and active states */
        .sidebar-linkz:hover {
            background-color: #e0dbfc;
            color: #3b3389;
        }

        .sidebar-linkz.active {
            background-color: #3b3389;
            color: #fff;
        }


        /* Avatar and greeting text */
        .sidebar-profile .d-flex {
            align-items: center;
        }

        .sidebar-profile img {
            object-fit: cover;
            border: 2px solid #e0dbfc;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .sidebar-profile {
                padding: 15px;
            }

            .sidebar-linkz {
                font-size: 14px;
                padding: 10px 12px;
            }
        }

        /* Form input styling */
        .form-control {
            border-radius: 8px;
            border: 1px solid #e0dbfc;
            padding: 8px 12px;
            transition: border-color 0.3s ease;
        }

        .form-control:focus {
            border-color: #3b3389;
            box-shadow: 0 0 0 3px rgba(59, 51, 137, 0.1);
        }

        /* Radio button styling */
        .form-check-input {
            border-color: #3b3389;
        }

        .form-check-input:checked {
            background-color: #3b3389;
            border-color: #3b3389;
        }

        /* Button styling */
        .btn-primary {
            background-color: #3b3389;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #2a2467;
        }

        .btn-secondary {
            background-color: #f8f9fa;
            border: 1px solid #e0dbfc;
            color: #3b3389;
            padding: 10px 20px;
            border-radius: 8px;
            transition: background-color 0.3s ease;
        }

        .btn-secondary:hover {
            background-color: #e0dbfc;
        }

        .profile-pic-container {
            position: relative;
            width: 120px;
            height: 120px;
            margin-bottom: 20px;
        }

        .profile-pic-preview {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 50%;
            border: 3px solid #e0dbfc;
        }

        .profile-pic-edit {
            position: absolute;
            bottom: 0;
            right: 0;
            background-color: #3b3389;
            color: white;
            border-radius: 50%;
            width: 30px;
            height: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
        }

        .profile-pic-input {
            display: none;
        }

        .gender-container {
            display: flex;
            align-items: center;
            height: 60%;
            margin-top: 0;
        }

        .form-check {
            margin: 0 8px;
            display: inline;
            align-items: baseline;
        }

        .form-check-input {
            margin-top: 0;
        }

        .form-check-label {
            font-size: 14px;
            padding-left: 5px;
        }
        .modal-content {
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    /* Modal header */
    .modal-header {
        border-bottom: none;
        padding: 20px 20px 0;
    }

    .modal-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #3b3389;
    }

    /* Modal body */
    .modal-body {
        padding: 20px 40px;
    }

    .modal-body p {
        font-size: 1rem;
        color: #555;
    }

    /* OTP input styling */
    .otp-input {
        width: 60%; /* Adjust width as needed */
        max-width: 250px; /* Set a max width */
        margin: 0 auto; /* Center the input */
        font-size: 1.25rem; /* Larger text */
        font-weight: 500;
        text-align: center; /* Center the text inside */
        padding: 12px 15px;
        border-radius: 10px;
        border: 2px solid #e0dbfc;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .otp-input:focus {
        border-color: #3b3389;
        box-shadow: 0 0 0 3px rgba(59, 51, 137, 0.1);
        outline: none;
    }

    /* Error message */
    #otpError {
        font-size: 0.9rem;
        font-weight: 500;
    }

    /* Modal footer */
    .modal-footer {
        border-top: none;
        padding: 0 20px 20px;
    }

    .modal-footer .btn {
        padding: 10px 25px;
        font-size: 1rem;
        font-weight: 500;
        border-radius: 8px;
        transition: transform 0.2s ease, background-color 0.3s ease;
    }

    .modal-footer .btn:hover {
        transform: translateY(-2px);
    }

    .modal-footer .btn-primary {
        background-color: #3b3389;
        border: none;
    }

    .modal-footer .btn-primary:hover {
        background-color: #2a2467;
    }

    .modal-footer .btn-secondary {
        background-color: #f8f9fa;
        border: 1px solid #e0dbfc;
        color: #3b3389;
    }

    .modal-footer .btn-secondary:hover {
        background-color: #e0dbfc;
    }
    </style>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg shadow-sm">
        <div class="container d-flex flex-column">
            <div class="d-flex w-100 justify-content-between align-items-center">
                <a class="navbar-brand fw-bold" href="#">FitBazar</a>
                <ul class="nav align-items-center">
                    <li class="nav-item"><a class="nav-link text-white"
                            href="/home">Home</a></li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/shop">Shop</a>
                    </li>
                    <li class="nav-item"><a class="nav-link text-white" href="#">Deals/Offers</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="#">About Us</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="#">Customer Support</a></li>
                </ul>
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn" type="submit" style="background-color: #E0DBFC;">
                        <i class="fa-solid fa-magnifying-glass" style="color: black;"></i>
                    </button>
                </form>
                <div class="d-flex align-items-center">
                    <a href="#" class="me-3 text-white"><i class="fa-solid fa-heart fa-lg"></i></a>
                    <a href="#" class="me-3 text-white"><i class="fa-solid fa-cart-shopping fa-lg"></i></a>
                    <% if (user) { %>
                        <a href="/user/profile" style="color: #3B3389;">
                            <% if (user.profilePic) { %>
                                <img src="<%= user.profilePic %>" alt="Profile Picture" style="width: 40px; height: 40px; border-radius: 50%;">
                            <% } else { %>
                                <i class="fa-solid fa-user" style="font-size: 24px;"></i>
                            <% } %>
                        </a>
                    <% } else { %>
                        <a href="/user/register" class="btn btn-light" style="color: #3B3389;">Sign Up</a>
                    <% } %> 
                </div>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        <div class="row g-5">
            <!-- Sidebar -->
            <div class="col-md-3">
                <div class="sidebar-profile p-3">
                    <div class="d-flex align-items-center mb-5">
                        <img src="<%= user.profilePic || '/placeholder.jpg' %>" alt="User Avatar"
                            class="rounded-circle me-2" width="50" height="50">
                        <span>Hello, <strong><%= firstName %></strong></span>
                    </div>

                    <nav class="nav flex-column gap-3">
                        <a href="/orders" class="nav-link sidebar-linkz">
                            <i class="fa-solid fa-box me-2"></i>My Orders
                        </a>
                        <a href="/user/profile" class="nav-link sidebar-linkz active">
                            <i class="fa-solid fa-user me-2" style="color: #fff;"></i>Profile Information
                        </a>
                        <a href="/user/address" class="nav-link sidebar-linkz">
                            <i class="fa-solid fa-location-dot me-2"></i>Manage Addresses
                        </a>
                        <a href="/user/payments" class="nav-link sidebar-linkz">
                            <i class="fa-solid fa-key me-2"></i>Privacy Settings
                        </a>
                        <a href="/coupons" class="nav-link sidebar-linkz">
                            <i class="fa-solid fa-ticket me-2"></i>My Coupons
                        </a>
                        <a href="/reviews" class="nav-link sidebar-linkz">
                            <i class="fa-solid fa-star me-2"></i>My Reviews & Ratings
                        </a>
                        <a href="/wallet" class="nav-link sidebar-linkz">
                            <i class="fa-solid fa-wallet me-2"></i>My Wallet
                        </a>
                    </nav>
                </div>
            </div>


            <!-- Profile Form -->
            <div class="col-md-9">
                <div class="profile-card">
                    <h4 class="mb-3 fw-bold" style="color: #3B3389;">Update Profile</h4>
                    <form id="profileForm" enctype="multipart/form-data">
                        <div class="row g-3">
                            <!-- Profile Picture -->
                            <div class="col-12 text-center">
                                <div class="profile-pic-container mx-auto">
                                    <img src="<%= user.profilePic || '/placeholder.jpg' %>" alt="Profile Preview"
                                        class="profile-pic-preview" id="profilePicPreview">
                                    <label for="profilePic" class="profile-pic-edit">
                                        <i class="fa-solid fa-camera"></i>
                                    </label>
                                    <input type="file" id="profilePic" name="profilePic" class="profile-pic-input"
                                        accept="image/*" onchange="previewImage(event)">
                                </div>
                            </div>

                            <!-- First Name and Last Name -->
                            <div class="col-md-6">
                                <label for="firstName" class="form-label mb-1">First Name</label>
                                <input type="text" id="firstName" name="firstName" class="form-control"
                                    value="<%= firstName || '' %>">
                            </div>
                            <div class="col-md-6">
                                <label for="lastName" class="form-label mb-1">Last Name</label>
                                <input type="text" id="lastName" name="lastName" class="form-control"
                                    value="<%= lastName || '' %>">
                                <input type="hidden" id="userId" name="userId" class="form-control"
                                    value="<%= user.userId || '' %>">
                            </div>

                            <!-- Email and Phone -->
                            <div class="col-md-6">
                                <label for="email" class="form-label mb-1">Email</label>
                                <input type="email" id="email" name="email" class="form-control"
                                    value="<%= user.email %>">
                                <input type="hidden" id="oldemail" name="oldemail" class="form-control"
                                    value="<%= user.email %>">
                            </div>
                            <div class="col-md-6">
                                <label for="phone" class="form-label mb-1">Phone</label>
                                <input type="tel" id="phone" name="phone" class="form-control"
                                    value="<%= user.phone || '' %>" placeholder="Enter mobile Number">
                            </div>

                            <!-- Bio and Gender -->
                            <div class="col-md-8">
                                <label for="bio" class="form-label mb-1">Bio</label>
                                <input type="text" id="bio" name="bio" class="form-control"
                                    value="<%= user.bio || '' %>" placeholder="Enter your bio details">
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Gender</label>
                                <div class="d-flex gender-container">
                                    <div class="form-check">
                                        <input type="radio" id="male" name="gender" value="Male"
                                            class="form-check-input" <%=user.gender==='Male' ? 'checked' : '' %>>
                                        <label for="male" class="form-check-label">Male</label>
                                    </div>
                                    <div class="form-check">
                                        <input type="radio" id="female" name="gender" value="Female"
                                            class="form-check-input" <%=user.gender==='Female' ? 'checked' : '' %>>
                                        <label for="female" class="form-check-label">Female</label>
                                    </div>
                                </div>
                            </div>

                            <!-- Buttons -->
                            <div class="col-12">
                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-primary">Update</button>
                                    <a href="/user/profile" class="btn btn-secondary">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- otp verification for email modal -->
        <div class="modal fade" id="otpModal" tabindex="-1" aria-labelledby="otpModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="otpModalLabel">Verify OTP</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body text-center">
                        <p class="mb-4">An OTP has been sent to your email/phone. Please enter it below:</p>
                        <input type="text" id="otpInput" class="form-control otp-input" placeholder="Enter OTP" maxlength="6">
                        <div id="otpError" class="text-danger mt-3" style="display: none;">Invalid OTP. Please try again.</div>
                    </div>
                    <div class="modal-footer justify-content-center">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary" onclick="verifyOTP()">Verify</button>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <script>

    function previewImage(event) {
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                document.getElementById('profilePicPreview').src = e.target.result;
            }
            reader.readAsDataURL(file);
        }
    }

    document.addEventListener('DOMContentLoaded', () => {
        const profileForm = document.getElementById('profileForm');
        const otpModal = new bootstrap.Modal(document.getElementById('otpModal'));
        const otpInput = document.getElementById('otpInput');
        const otpError = document.getElementById('otpError');
        let formData, userId, originalEmail, newEmail;

        originalEmail = document.getElementById('oldemail').value;

        profileForm.addEventListener('submit', async (e) => {
            e.preventDefault();

            formData = new FormData(profileForm);
            userId = document.getElementById('userId').value;
            newEmail = document.getElementById('email').value;

            if (newEmail === originalEmail) {
                await updateProfile();
            } else {
                
                try {
                    const response = await fetch('/user/sendotp', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ email: newEmail }),
                    });

                    const data = await response.json();
                    if (!response.ok) {
                        Swal.fire('Error', data.error || 'Failed to send OTP', 'error');
                        return;
                    }

                    otpModal.show();
                    otpInput.value = '';
                    otpError.style.display = 'none';

                } catch (error) {
                    console.error('Error:', error);
                    Swal.fire('Error', 'An error occurred while sending OTP', 'error');
                }
            }
        });

        window.verifyOTP = async () => {
            const otp = otpInput.value.trim();

            if (!otp) {
                otpError.textContent = 'Please enter the OTP';
                otpError.style.display = 'block';
                return;
            }

            try {
                const response = await fetch('/user/verifymail', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email: newEmail, otp }),
                });

                const data = await response.json();
                if (!response.ok) {
                    otpError.textContent = data.error || 'Invalid OTP';
                    otpError.style.display = 'block';
                    return;
                }

                otpModal.hide();
                await updateProfile();
            } catch (error) {
                console.error('Error:', error);
                otpError.textContent = 'An error occurred';
                otpError.style.display = 'block';
            }
        };

        // Update Profile function
        async function updateProfile() {
            try {
                const response = await fetch(`/user/profile?id=${userId}`, {
                    method: 'PUT',
                    body: formData,
                });

                const data = await response.json();
                if (!response.ok) {
                    Swal.fire('Error', data.error || 'Failed to update profile', 'error');
                } else {
                    Swal.fire({
                        icon: 'success',
                        text: data.message || 'Your profile has been updated successfully.',
                        timer: 2000,
                        showConfirmButton: false,
                    }).then(() => {
                        window.location.href = '/user/profile';
                    });
                }
            } catch (error) {
                console.error('Error:', error);
                Swal.fire('Error', 'An error occurred while updating the profile', 'error');
            }
        }
    });

    </script>
</body>