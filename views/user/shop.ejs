    <div class="container-fluid mt-4">
        <!-- Heading -->
        <div class="container-fluid text-center mb-5">
            <h2 class="fw-bold" style="color: #3B3389;">Unleash Your Potential – Shop the Best from FitBazar!</h2>
        </div>

        <div class="row mx-5">
            <!-- Sidebar Filters -->
            <aside class="col-md-2">
                <h5 class="mb-3">Filter items</h5>
                <div>
                    <h6>Category</h6>
                    <ul class="list-unstyled">
                        <% category.forEach(category => { %>
                            <li><input type="checkbox"> <%= category.name %></li>
                        <% }); %>
                    </ul>
                    <h6 class="mt-3">Price</h6>
                    <div class="mb-4 w-75">
                        <input type="range" class="form-range" min="0" max="10000" step="100" id="priceRange">
                        <div class="d-flex justify-content-between fw-bold">
                            <small id="minValue">₹0</small>
                            <small id="currValue"></small>
                            <small id="maxValue">₹10,000</small>
                        </div>
                    </div>

                    <h6>Brand</h6>
                    <h6>Brand</h6>
                    <ul class="list-unstyled">
                        <% 
                            // Extract unique brands using Set
                            const uniqueBrands = [...new Set(product.map(p => p.brand))]; 
                        %>
                        <% uniqueBrands.forEach(brand => { %>
                            <li><input type="checkbox"> <%= brand %></li>
                        <% }); %>
                    </ul>
                    <button type="submit" class="btn text-white" style="background-color: #3023bb;">Apply Filters</button>
                </div>
            </aside>

            <!-- Product Grid -->
            <main class="col-md-10 mb-3">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <!-- Label -->
                    <h5 class="fw-bold mb-0" style="color: #3B3389;">All Products</h5>
                
                    <!-- Sort Options -->
                    <div class="d-flex align-items-center">
                        <label for="sortSelect" class="me-2 fw-semibold text-muted">Sort by:</label>
                        <select id="sortSelect" class="form-select form-select-sm" style="width: 160px;">
                            <option selected>Best Selling</option>
                            <option value="priceLowToHigh">Price: Low to High</option>
                            <option value="priceHighToLow">Price: High to Low</option>
                            <option value="aToZ">A - Z</option>
                            <option value="zToA">Z - A</option>
                            <option value="ratingHighToLow">Top Rated</option>
                            <option value="newest">Newest Arrivals</option>
                        </select>
                    </div>
                </div>
                
                <div class="row" id="product-container">
                    <% product.forEach(product => { %>
                        <div class="col-md-3 col-lg-3 my-3">
                            <div class="card shadow-sm p-2">
                                <!-- Image Container with Offer Badge -->
                                <div class="position-relative">
                                    <img src="/uploads/products/<%= product.productImages[0] %>" 
                                         class="product-img card-img-top mx-auto d-block" 
                                         style="height: 250px; object-fit: cover;">

                                    <% if (product.productOffer > 0) { %>
                                        <span class="badge bg-danger position-absolute top-0 start-0 m-2 px-2 py-1">
                                            <%= product.productOffer %>% OFF
                                        </span>
                                    <% } %>
                                </div>
                
                                <div class="card-body p-2">
                                    <h6 class="card-title text-truncate mb-1"><%= product.name %></h6>
                                    <p class="text-warning mb-1">⭐ <%= product.rating %> (<%= product.reviewsCount %>)</p>
                                    <p class="d-flex align-items-center gap-2 mb-2">
                                        <strong class="fs-6 text-success">₹<%= Math.round(product.price - (product.price * product.productOffer / 100)) %></strong> 
                                        <del class="text-muted small">₹<%= product.price %></del>
                                    </p>
                                    <div class="d-flex gap-2">
                                        <button class="btn w-50 btn-sm custom-outline-btn">
                                            <i class="fa fa-cart-shopping me-2"></i> Add to Cart
                                        </button>
                                        <button class="btn w-50 btn-sm text-white" style="background-color: #4132e6; font-size: 0.8em;">
                                            <i class="fa fa-bolt me-2"></i> Buy Now
                                        </button>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
                
                
                <!-- Show More Button -->
                <div class="d-flex w-100 justify-content-center mt-3">
                    <% if (product.length > 3) { %>
                        <button id="show-more-btn" class="btn btn-outline-secondary px-4 py-2">
                            Show More
                        </button>
                    <% } %>
                </div>
                
            </main>
        </div>
    </div>
    <script>
        const priceRange = document.getElementById("priceRange");
        const minValue = document.getElementById("minValue");
        const maxValue = document.getElementById("currValue");
    
        priceRange.addEventListener("input", function () {
            let selectedValue = parseInt(this.value);
            minValue.textContent = `₹0`;
            currValue.textContent = `₹${selectedValue.toLocaleString()}`;
        });
    </script>
