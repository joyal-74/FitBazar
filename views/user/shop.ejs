    <div class="container-fluid mt-4">
        <!-- Heading -->
        <div class="container-fluid text-center mb-5">
            <h2 class="fw-bold" style="color: #3B3389;">Unleash Your Potential – Shop the Best from FitBazar!</h2>
        </div>

        <div class="row mx-5">
            <!-- Sidebar Filters -->
            <aside class="col-md-2">
                <h5 class="mb-3">Filter items</h5>
                <form id="filterForm" action="/user/products" method="post">
                    <div>
                        <!-- Category Filter -->
                        <h6>Category</h6>
                        <ul class="list-unstyled">
                            <% category.forEach(cat => { %>
                                <li>
                                    <input type="checkbox" name="category" value="<%= cat.name %>"
                                        <%= appliedFilters.category && appliedFilters.category.includes(cat.name) ? "checked" : "" %> >
                                    <%= cat.name %>
                                </li>
                            <% }); %>
                        </ul>
                
                        <!-- Price Range -->
                        <h6 class="mt-3">Price</h6>
                        <div class="mb-4 w-75">
                            <input type="range" class="form-range" min="0" max="10000" step="100" id="priceRange" name="price"
                                value="<%= appliedFilters.price ? appliedFilters.price : 5000 %>"
                                oninput="updatePrice(this.value)">
                            <div class="d-flex justify-content-between fw-bold">
                                <small id="minValue">₹0</small>
                                <small id="currValue">₹<%= appliedFilters.price ? appliedFilters.price : 5000 %></small>
                                <small id="maxValue">₹10,000</small>
                            </div>
                        </div>
                
                        <!-- Brand Filter -->
                        <h6>Brand</h6>
                        <ul class="list-unstyled">
                            <% 
                                const uniqueBrands = [...new Set(product.map(p => p.brand))]; // Get all brands
                            %>
                            <% uniqueBrands.forEach(brand => { %>
                                <li>
                                    <input type="checkbox" name="brand" value="<%= brand %>"
                                        <%= appliedFilters.brand && appliedFilters.brand.includes(brand) ? "checked" : "" %> >
                                    <%= brand %>
                                </li>
                            <% }); %>
                        </ul>
                
                        <!-- Availability Filter -->
                        <ul class="list-unstyled">
                            <h6>Availability</h6>
                            <li>
                                <input type="checkbox" name="availability" value="outOfStock"
                                    <%= appliedFilters.availability === "outOfStock" ? "checked" : "" %> >
                                Include out of Stock
                            </li>
                        </ul>
                
                        <button type="submit" class="btn text-white" style="background-color: #3023bb;">Apply Filters</button>
                    </div>
                </form>
                             
            </aside>

            <!-- Product Grid -->
            <main class="col-md-10 mb-3">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <!-- Label -->
                    <h5 class="fw-bold mb-0" style="color: #3B3389;">All Products</h5>
                
                    <!-- Sort Options -->
                    <div class="d-flex align-items-center">
                        <label for="sortSelect" class="me-2 fw-semibold text-muted">Sort by:</label>
                        <select id="sortSelect" class="form-select form-select-sm" style="width: 160px;">
                            <option selected>Best Selling</option>
                            <option value="priceLowToHigh">Price: Low to High</option>
                            <option value="priceHighToLow">Price: High to Low</option>
                            <option value="aToZ">Name: A - Z</option>
                            <option value="zToA">Name: Z - A</option>
                            <option value="ratingHighToLow">Top Rated</option>
                            <option value="newest">Newest Arrivals</option>
                        </select>
                    </div>

                    
                </div>
                
                <div class="row" id="product-container">
                    <% product.forEach(product => { %>
                        <div class="col-md-3 col-lg-3 my-3">
                            <a href="/user/product?productId=<%= product.productId %>&category=<%= product.category%>" class="text-decoration-none text-dark">
                                <div class="card shadow-sm p-2">
                                    <!-- Image Container with Offer Badge -->
                                    <div class="position-relative">
                                        <img src="/uploads/products/<%= product.productImages[0] %>" 
                                             class="product-img card-img-top mx-auto d-block" 
                                             style="height: 250px; object-fit: cover;">
                
                                        <% if (product.productOffer > 0) { %>
                                            <span class="badge bg-danger position-absolute top-0 start-0 m-2 px-2 py-1">
                                                <%= product.productOffer %>% OFF
                                            </span>
                                        <% } %>
                                    </div>
                
                                    <div class="card-body p-2">
                                        <h6 class="card-title text-truncate mb-1"><%= product.name %></h6>
                                        <p class="text-warning mb-1">⭐ <%= product.rating %> (<%= product.reviewsCount %>)</p>
                                        <p class="d-flex align-items-center gap-2 mb-2">
                                            <strong class="fs-6 text-success">₹<%= Math.round(product.price - (product.price * product.productOffer / 100)) %></strong> 
                                            <del class="text-dark small">₹<%= product.price %></del>
                                        </p>
                                        <div class="d-flex gap-2">
                                            <button class="btn w-50 btn-sm custom-outline-btn">
                                                <i class="fa fa-cart-shopping me-2"></i> Add to Cart
                                            </button>
                                            <button class="btn w-50 btn-sm text-white" style="background: linear-gradient(to right, #9c3ec8, #3858a9); border: none; font-size: 0.8em;">
                                                <i class="fa fa-bolt me-2"></i> Buy Now
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    <% }); %>
                </div>
                
                
                
                <!-- Pagination -->
                <div class="d-flex w-100 justify-content-center mt-3">
                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            <% if (currentPage > 1) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
                                </li>
                            <% } %>
                
                            <% for (let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                </li>
                            <% } %>
                
                            <% if (currentPage < totalPages) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                                </li>
                            <% } %>
                        </ul>
                    </nav>
                </div>
                
                
            </main>
        </div>


