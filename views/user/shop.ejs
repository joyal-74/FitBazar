<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FitBazar - Shop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
    <style>
        .product-img {
            width: 200px;
            height: 200px;
            object-fit: contain;
        }
    </style>
</head>
<body>
    
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-light shadow-sm">
        <div class="container d-flex flex-column">
            <!-- First Line: Logo, Search Bar, Cart, Sign-Up -->
            <div class="d-flex w-100 justify-content-between align-items-center">
                <a class="navbar-brand fw-bold" style="font-size: 32px; color: #3B3389;" href="#">FitBazar</a>
                <form class="d-flex w-50">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn" type="submit" style="background-color: #4D44AD;"><i class="fa-solid fa-magnifying-glass" style="color: white;"></i></button>
                </form>
                <div class="d-flex align-items-center">
                    <a href="#" class="btn btn-outline-secondary me-3">üõí</a>
                    <a href="#" class="btn"  style="background-color: #4D44AD; color: white;">Sign Up</a>
                </div>
            </div>
    
            <!-- Second Line: Navigation Links -->
            <div class="w-100 d-flex justify-content-start mt-2">
                <ul class="nav gap-5 align-items-center">
                    <li class="nav-item"><a class="nav-link text-dark" href="#">Home</a></li>
                    <li class="nav-item">
                        <a class="nav-link active btn py-1 px-4" href="#" style="background-color: #4D44AD; color: white;">Shop</a>
                    </li>
                    
                    <li class="nav-item"><a class="nav-link text-dark" href="#">Deals/Offers</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" href="#">About Us</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" href="#">Customer Support</a></li>
                </ul>
            </div>
            
        </div>
    </nav>
    
    <div class="container-fluid mt-4">
        <!-- Category Navigation Bar -->
        <div class="container my-3 w-75">
            <ul class="nav justify-content-center border-bottom pb-2">
                <h5 class="text-dark fw-bold" href="#">Unleash Your Potential ‚Äì Shop the Best from FitBazar!</a>
            </ul>
        </div>

        <div class="row mx-5">

            
            <!-- Sidebar Filters -->
            <aside class="col-md-2">
                <h5>Filter items</h5>
                <div>
                    <h6>Category</h6>
                    <ul class="list-unstyled">
                        <li><input type="checkbox"> Strength Training</li>
                        <li><input type="checkbox"> Cardio Accessories</li>
                        <li><input type="checkbox"> Yoga & Pilates</li>
                    </ul>
                    <h6>Price</h6>
                    <input type="range" class="form-range">
                </div>
            </aside>
            
            <!-- Product Grid -->
            <main class="col-md-9 mb-3">
                <div class="d-flex justify-content-between">
                    <h4>Trending Products</h4>
                    <button>Sort ></button>
                </div>
                <div class="row" id="product-container">
                    <!-- Products loaded dynamically -->
                </div>
            </main>
        </div>
    </div>
    
    <script>
        // Sample products (replace with backend data)
        const products = [
            { id: 1, name: "Dumbbell - 2kg x 2", price: 2199, discount: 3579, rating: 4, image: "img1.jpg" },
            { id: 2, name: "Dumbbell - 15kg", price: 2389, discount: 3579, rating: 3, image: "img2.jpg" },
        ];
        
        const productContainer = document.getElementById("product-container");
        products.forEach(product => {
            productContainer.innerHTML += `
                <div class="col-md-4 col-lg-3 mb-4">
                    <div class="card shadow-sm">
                        <img src="${product.image}" class="product-img card-img-top">
                        <div class="card-body">
                            <h6 class="card-title">${product.name}</h6>
                            <p class="text-warning">‚≠ê ${product.rating}</p>
                            <p><strong>‚Çπ${product.price}</strong> <del>‚Çπ${product.discount}</del></p>
                            <button class="btn btn-primary w-100">Add to Cart</button>
                        </div>
                    </div>
                </div>`;
        });
    </script>
    
</body>
</html>
