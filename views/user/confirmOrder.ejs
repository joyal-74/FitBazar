<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg shadow-sm bg-white">
        <div class="container">
            <!-- Brand Logo -->
            <a class="navbar-brand fw-bold fs-4" href="#" style="color: #3B3389;">FitBazar</a>
    
            <!-- Toggle Button for Offcanvas -->
            <button class="navbar-toggler border-0 shadow-sm" type="button" data-bs-toggle="offcanvas" data-bs-target="#navbarOffcanvas" aria-controls="navbarOffcanvas">
                <span class="navbar-toggler-icon"></span>
            </button>
    
            <!-- Offcanvas Navbar -->
            <div class="offcanvas offcanvas-end" tabindex="-1" id="navbarOffcanvas" aria-labelledby="navbarOffcanvasLabel">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title fw-bold" id="navbarOffcanvasLabel" style="color: #3B3389;">FitBazar</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
    
                <div class="offcanvas-body">
                    <ul class="navbar-nav me-auto align-items-lg-center gap-2">
                        <li class="nav-item">
                            <a class="nav-link text-white py-2 px-3" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white py-2 px-3" href="/shop">Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white py-2 px-3" href="#">Deals/Offers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white py-2 px-3" href="#">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white py-2 px-3" href="#">Customer Support</a>
                        </li>
                    </ul>
    
                    <!-- Search Form -->
                    <form class="d-flex mt-3 mt-lg-0">
                        <input class="form-control me-2 border-0 shadow-sm" type="search" placeholder="Search" aria-label="Search" style="border-radius: 20px;">
                        <button class="btn" type="submit" style="background-color: #E0DBFC; border-radius: 20px;">
                            <i class="fa-solid fa-magnifying-glass" style="color: black;"></i>
                        </button>
                    </form>
    
                    <!-- Icons and User Section -->
                    <div class="d-flex align-items-center mt-3 mt-lg-0">
                        <a href="#" class="mx-3 text-white"><i class="fa-solid fa-heart fa-lg"></i></a>
                        <a href="#" class="me-3 text-white"><i class="fa-solid fa-cart-shopping fa-lg"></i></a>
                        <% if (user) { %>
                            <a href="#" class="btn btn-light" style="color: #3B3389; border-radius: 50%;">
                                <i class="fa-solid fa-user"></i>
                            </a>
                        <% } else { %>
                            <a href="/user/register" class="btn btn-outline-primary" style="border-radius: 20px;">Sign Up</a>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    

    <!-- Order Confirmation Section -->
    <main class="container mt-5">
        <div class="row justify-content-center">
            <!-- Left: Confirmation Icon and Message -->
            <div class="col-md-4">
                <div class="card p-4 border-0 shadow-sm text-center" style="background-color: #F9F9F9; border-radius: 16px;">
                    <!-- Confirmation Icon -->
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 64px;"></i>
                    </div>

                    <!-- Confirmation Message -->
                    <h2 class="fw-bold mb-3" style="color: #3B3389;">Order Confirmed!</h2>
                    <p class="text-muted mb-4">Your order has been successfully placed. Thank you for shopping with us!</p>

                    <!-- Call to Action -->
                    <div class="d-grid gap-3">
                        <a href="/shop" class="btn btn-outline-primary" style="border-radius: 12px; font-weight: 500;">Continue Shopping</a>
                        <a href="/orders" class="btn text-white" style="background-color: #6C5DD3; border-radius: 12px; font-weight: 500;">View Orders</a>
                    </div>
                </div>
            </div>

            <!-- Right: Order Summary and Shipping Address -->
            <div class="col-md-8">
                <!-- Order Summary -->
                <div class="card p-4 mb-4 border-0 shadow-sm" style="background-color: #F9F9F9; border-radius: 16px;">
                    <h5 class="fw-bold mb-4" style="color: #3B3389;">Order Summary</h5>
                    <div class="d-flex justify-content-between mb-3">
                        <span class="text-muted">Order ID</span>
                        <span class="fw-medium">#123456789</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span class="text-muted">Order Date</span>
                        <span class="fw-medium">October 10, 2023</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span class="text-muted">Total Amount</span>
                        <span class="fw-medium">â‚¹ 5828</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span class="text-muted">Payment Method</span>
                        <span class="fw-medium">Razorpay</span>
                    </div>
                </div>

                <!-- Shipping Address -->
                <div class="card p-4 border-0 shadow-sm" style="background-color: #F9F9F9; border-radius: 16px;">
                    <h5 class="fw-bold mb-4" style="color: #3B3389;">Shipping Address</h5>
                    <div class="mb-2">
                        <strong class="text-white">JOYAL KURIAKOSE</strong>
                    </div>
                    <p class="text-muted mb-0" style="font-size: 14px; line-height: 1.6;">
                        Thekkemathoor (h) Pasukkadave (po) kavilumpara (via) Kozhikode (dist),<br>
                        Pasukkadave, Pasukkadave, Kerala - 673513
                    </p>
                </div>
            </div>
        </div>
    </main>
</body>
