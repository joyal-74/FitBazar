<head>
    <style>
        /* Order Summary */
        .order-summary {
            background: linear-gradient(135deg, #F9F9F9, #F4F4FC);
            border-radius: 12px;
            position: sticky;
            top: 20px;
        }
        .order-summary .btn-primary {
            background: linear-gradient(90deg, #6C5DD3, #8A7DE8);
            border: none;
            border-radius: 12px;
            padding: 12px;
            font-size: 1.1rem;
            transition: transform 0.2s ease;
        }
        .order-summary .btn-primary:hover {
            transform: scale(1.02);
        }
        .coupon-input .btn-outline-secondary {
            border-radius: 0 5px 5px 0;
            transition: background-color 0.2s ease;
        }
        .coupon-input .btn-outline-secondary:hover {
            background-color: #6C5DD3;
            color: #FFFFFF;
            border-color: #6C5DD3;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg shadow-sm">
        <div class="container d-flex flex-column">
            <div class="d-flex w-100 justify-content-between align-items-center">
                <a class="navbar-brand fw-bold" href="#">FitBazar</a>
                <ul class="nav align-items-center">
                    <li class="nav-item"><a class="nav-link text-white" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="/shop">Shop</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="#">Deals/Offers</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="#">About Us</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="#">Customer Support</a></li>
                </ul>
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn" type="submit" style="background-color: #E0DBFC;">
                        <i class="fa-solid fa-magnifying-glass" style="color: black;"></i>
                    </button>
                </form>
                <div class="d-flex align-items-center">
                    <a href="#" class="me-3 text-white"><i class="fa-solid fa-heart fa-lg"></i></a>
                    <a href="/user/cart" class="me-3 text-white"><i class="fa-solid fa-cart-shopping fa-lg"></i></a>
                    <% if (user) { %>
                        <a href="/user/profile" style="color: #3B3389;">
                            <% if (user.profilePic) { %>
                                <img src="<%= user.profilePic %>" alt="Profile Picture" style="width: 40px; height: 40px; border-radius: 50%;">
                            <% } else { %>
                                <i class="fa-solid fa-user" style="font-size: 24px;"></i>
                            <% } %>
                        </a>
                    <% } else { %>
                        <a href="/user/register" class="btn btn-light" style="color: #3B3389;">Sign Up</a>
                    <% } %> 
                </div>
            </div>
        </div>
    </nav>

    <!-- Progress Bar -->
    <div class="container mt-4">
        <div class="d-flex justify-content-center align-items-center">
            <div class="d-flex align-items-center me-3">
                <i class="fas fa-shopping-cart text-warning me-2"></i>
                <span class="fw-bold">Cart</span>
            </div>
            <i class="fas fa-arrow-right text-secondary me-3"></i>
            <div class="d-flex align-items-center me-3">
                <i class="fas fa-truck text-secondary me-2"></i>
                <span class="fw-bold">Shipping</span>
            </div>
            <i class="fas fa-arrow-right text-primary me-3"></i>
            <div class="d-flex align-items-center">
                <i class="fas fa-credit-card text-primary me-2"></i>
                <span class="fw-bold text-primary">Payments</span>
            </div>
        </div>
    </div>

    <!-- Payment Section -->
    <main class="container mt-4">
        <form id="paymentForm">
            <div class="row g-4">
                <!-- Payment Methods -->
                <div class="col-md-8">
                    <h4 class="fw-bold mb-4">Select Payment Method</h4>
                    
                    <!-- Razorpay -->
                    <div class="card p-4 mb-3 border-0 shadow-sm" style="background-color: #F8F8F8;">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="paymentMethod" value="razorpay" id="razorpay" checked>
                            <label class="form-check-label w-100" for="razorpay">
                                <div class="d-flex align-items-center">
                                    <img src="/razorpay.png" alt="Razorpay" class="me-3" width="24">
                                    <div>
                                        <strong>Online payment</strong>
                                        <p class="mb-0 text-muted" style="font-size: 14px;">Select online payment</p>
                                    </div>
                                </div>
                            </label>
                        </div>
                    </div>
            
                    <!-- Google Pay / UPI -->
                    <!-- <div class="card p-3 mb-3 border-0 shadow-sm" style="background-color: #F8F8F8;">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="paymentMethod" value="gpay" id="gpay">
                            <label class="form-check-label w-100" for="gpay">
                                <div class="d-flex align-items-center">
                                    <img src="/google-logo.png" alt="Google Pay" class="me-3" width="24">
                                    <div>
                                        <strong>UPI Payment</strong>
                                        <p class="mb-0 text-muted" style="font-size: 14px;">Pay by any UPI app</p>
                                    </div>
                                </div>
                            </label>
                        </div>
                    </div> -->
            
                    <!-- Credit/Debit Card -->
                    <!-- <div class="card p-3 mb-3 border-0 shadow-sm" style="background-color: #F8F8F8;">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="paymentMethod" value="card" id="card">
                            <label class="form-check-label w-100" for="card">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-credit-card me-3" style="font-size: 24px;"></i>
                                    <div>
                                        <strong>Credit/Debit/ATM Card</strong>
                                        <p class="mb-0 text-muted" style="font-size: 14px;">Add any secure card by RBI guidelines</p>
                                    </div>
                                </div>
                            </label>
                        </div>
                    </div> -->
            
                    <!-- Wallets -->
                    <div class="card p-4 mb-3 border-0 shadow-sm" style="background-color: #F8F8F8;">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="paymentMethod" value="wallet" id="wallet">
                            <label class="form-check-label w-100" for="wallet">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-wallet me-3" style="font-size: 24px;"></i>
                                    <div>
                                        <strong>Wallets</strong>
                                        <p class="mb-0 text-muted" style="font-size: 14px;">Use your FitBazar wallet</p>
                                    </div>
                                </div>
                            </label>
                        </div>
                    </div>
            
                    <!-- Cash on Delivery -->
                    <div class="card p-4 mb-3 border-0 shadow-sm" style="background-color: #F8F8F8;">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="paymentMethod" value="cod" id="cod">
                            <label class="form-check-label w-100" for="cod">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-money-bill-wave me-3" style="font-size: 24px;"></i>
                                    <div>
                                        <strong>Cash on Delivery</strong>
                                    </div>
                                </div>
                            </label>
                        </div>
                    </div>
                </div>
    
                <!-- Price Summary -->
                <div class="col-md-4">
                    <div class="card p-3 shadow-sm border-0 order-summary mb-3" style="margin-top: 52px;">
                        <h5 class="fw-bold text-dark mb-4">Price Details</h5>
                        <% if (cart && cart.items && cart.items.length > 0) { %>
                            <% let total = 0; %>
                            <% cart.items.forEach(item => { %>
                                <% total += item.quantity * item.price; %>
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-muted text-truncate" 
                                          style="font-size: 0.95rem; max-width: 70%; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                        <%= item.quantity %>x <%= item.productId.name %>
                                    </span>
                                    <span class="text-dark fw-medium flex-shrink-0">
                                        ₹ <%= (item.quantity * item.price).toLocaleString('en-IN') %>
                                    </span>
                                </div>
                            <% }) %>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-muted" style="font-size: 0.95rem;">Delivery Charges</span>
                                <span class="text-success fw-semibold flex-shrink-0">Free</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-muted" style="font-size: 0.95rem;">Platform Fee</span>
                                <span class="text-success fw-semibold flex-shrink-0">₹ 0</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-muted" style="font-size: 0.95rem;">Coupon Discount</span>
                                <span class="text-success fw-semibold flex-shrink-0">₹ 0</span>
                            </div>
                            <hr class="my-2" style="border-color: #E0E0E0;">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="fw-bold text-dark" style="font-size: 1.2rem;">Grand Total</span>
                                <span id="grandTotal" class="fw-bold text-dark flex-shrink-0" style="font-size: 1.2rem;" 
                                    value="<%= total %>">
                                    ₹ <%= total.toLocaleString('en-IN') %>
                                </span>
                            </div>
                            
                            <!-- Combined submit button -->
                            <button type="submit" class="btn btn-primary w-100 mt-4">Place Order</button>
                        <% } else { %>
                            <p class="text-muted text-center fs-5">No items in your cart.</p>
                        <% } %>
                    </div>
                </div>
                
            </div>
        </form>
    </main>

    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        document.getElementById('paymentForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const paymentMethod = document.querySelector('input[name="paymentMethod"]:checked').value;
            const totalValue = document.getElementById('grandTotal').getAttribute('value');
            const totalPrice = Number(totalValue);

            if (paymentMethod === 'razorpay') {
                try {
                    // Step 1: Create Razorpay order on backend
                    const response = await fetch('/user/payments/razorpay', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ totalPrice })
                    });

                    const data = await response.json();

                    if (!response.ok) {
                        throw new Error(data.error || 'Failed to create Razorpay order');
                    }

                    // Step 2: Open Razorpay checkout popup
                    const options = {
                        key: '<%= process.env.RAZORPAY_KEY_ID %>', // Your Razorpay Key ID
                        amount: data.amount,
                        currency: data.currency,
                        name: "FitBazar",
                        description: "Fitness Equipment Purchase",
                        order_id: data.orderId,
                        handler: async function (response) {
                            console.log('Payment successful', response);

                            // Step 3: Verify payment
                            const verifyResponse = await fetch('/user/payments/verify', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                },
                                body: JSON.stringify({
                                    razorpayPaymentId: response.razorpay_payment_id,
                                    razorpayOrderId: response.razorpay_order_id,
                                    razorpaySignature: response.razorpay_signature
                                })
                            });

                            const verifyData = await verifyResponse.json();

                            if (verifyData.success) {
                                // Step 4: Process the order after verification
                                const orderData = {
                                    couponApplied: false,
                                    paymentMethod: 'razorpay',
                                    totalPrice,
                                    razorpayPaymentId: response.razorpay_payment_id,
                                    razorpayOrderId: response.razorpay_order_id
                                };

                                const orderResponse = await fetch('/user/payments', {
                                    method: 'POST',
                                    headers: {
                                        'Content-Type': 'application/json'
                                    },
                                    body: JSON.stringify(orderData)
                                });

                                const orderDataResult = await orderResponse.json();

                                if (orderResponse.ok) {
                                    Swal.fire({
                                        text: orderDataResult.message || 'Payment successful and order placed!',
                                        icon: 'success',
                                        timer: 2000,
                                        showConfirmButton: false
                                    }).then(() => {
                                        window.location.href = '/user/confirmOrder';
                                    });
                                } else {
                                    throw new Error(orderDataResult.error || 'Failed to process order');
                                }
                            } else {
                                Swal.fire({
                                    text: verifyData.error || 'Payment verification failed',
                                    icon: 'error',
                                    timer: 2000,
                                    showConfirmButton: false
                                });
                            }
                        },
                        prefill: {
                            name: '<%= user ? user.name : "" %>',
                            email: '<%= user ? user.email : "" %>',
                            contact: '<%= user ? user.phone : "" %>'
                        },
                        theme: {
                            color: '#3B3389'
                        }
                    };

                    const rzp = new Razorpay(options);
                    rzp.open();

                } catch (error) {
                    console.error('Error:', error);
                    Swal.fire({
                        text: error.message || 'An error occurred with Razorpay',
                        icon: 'error',
                        timer: 2000,
                        showConfirmButton: false
                    });
                }
            } else {
                // Handle other payment methods (e.g., COD)
                const couponApplied = false;
                const orderData = {
                    couponApplied,
                    paymentMethod,
                    totalPrice
                };

                try {
                    const response = await fetch('/user/payments', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(orderData)
                    });
                    const data = await response.json();

                    if (!response.ok) {
                        Swal.fire({
                            text: data.error || 'Payment processing failed',
                            icon: 'warning',
                            timer: 2000,
                            showConfirmButton: false
                        });
                    } else {
                        Swal.fire({
                            text: data.message || 'Order placed successfully',
                            icon: 'success',
                            timer: 2000,
                            showConfirmButton: false
                        }).then(() => {
                            window.location.href = '/user/confirmOrder';
                        });
                    }
                } catch (error) {
                    console.error('Error:', error);
                    Swal.fire({
                        text: 'An error occurred while processing your order',
                        icon: 'error',
                        timer: 2000,
                        showConfirmButton: false
                    });
                }
            }
        });
    });
</script>
    
</body>