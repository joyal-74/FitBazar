                e.preventDefault();
                Swal.fire({
                    icon: 'info',
                    text: 'Please login to continue',
                    showConfirmButton: true,
                    confirmButtonText: 'Login',
                    showCancelButton: true,
                    cancelButtonText: 'Cancel'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = "/user/login";
                    }
                });
            });
        });
        
    });
</script>