    <script>

        document.addEventListener('DOMContentLoaded', () => {
            if (product.variants && product.variants.length > 0) {
                // Automatically select the first variant
                selectColor(product.variants[0].attributeValue, 0);
            }
        });

        const product = <%- JSON.stringify(product) %>;

        function selectColor(color, index) {
            console.log(`Selected color: ${color}`);

            const selectedVariant = product.variants[index];

            document.getElementById('selectedColor').value = color;
            
            if (selectedVariant && selectedVariant.images) {
                const mainImage = document.getElementById('mainImage');
                mainImage.src = selectedVariant.images[0];

                const thumbnails = document.querySelectorAll('.thumbnail');
                thumbnails.forEach((thumbnail, i) => {
                    if (selectedVariant.images[i]) {
                        thumbnail.src = selectedVariant.images[i];
                        thumbnail.style.display = 'block';
                    } else {
                        thumbnail.style.display = 'none';
                    }
                });
            } else {
                console.error('No images found for the selected color');
            }
        }
    
        document.addEventListener("DOMContentLoaded", function () {
            const zoomContainer = document.querySelector(".zoom-container");
            const zoomImage = document.getElementById("mainImage");
            const zoomLens = document.querySelector(".zoom-lens");
    
            zoomContainer.addEventListener("mousemove", function (e) {
                const containerRect = zoomContainer.getBoundingClientRect();
                const imageRect = zoomImage.getBoundingClientRect();
    
                const x = e.clientX - containerRect.left;
                const y = e.clientY - containerRect.top;
    
                const lensX = Math.max(0, Math.min(x - 75, imageRect.width - 150));
                const lensY = Math.max(0, Math.min(y - 75, imageRect.height - 150));
    
                zoomLens.style.left = `${lensX}px`;
                zoomLens.style.top = `${lensY}px`;
                zoomLens.style.display = "block";
    
                zoomImage.style.transform = "scale(2)";
                zoomImage.style.transformOrigin = `${x}px ${y}px`;
            });
    
            zoomContainer.addEventListener("mouseleave", function () {
                zoomLens.style.display = "none";
                zoomImage.style.transform = "scale(1)";
            });
        });
    
        document.addEventListener("DOMContentLoaded", function () {
            const mainImage = document.getElementById("mainImage");
            const thumbnails = document.querySelectorAll(".thumbnail");
    
            thumbnails.forEach(thumbnail => {
                thumbnail.addEventListener("mouseover", function () {
                    mainImage.src = this.src;
                });
            });
        });


        document.getElementById('addtocartBtn').addEventListener('click', async (e) => {
            e.preventDefault();

            const userId = document.getElementById('userId').value;
            const productId = document.getElementById('productId').value;
            const quantity = document.getElementById('quantity').value;
            const price = document.getElementById('salePrice').value;
            const variants = document.getElementById('selectedColor').value;

            console.log(price)


            const productdetails = {
                userId, productId, quantity, price, variants
            }

            try {
                const response = await  fetch('/user/addTocart',{
                method : 'POST',
                headers : {
                    'Content-Type' : 'application/json',
                },
                body : JSON.stringify(productdetails)
            });

            const data = await response.json();

            if(!response.ok){
                console.log('Some error');
                Swal.fire({
                    icon: "warning",
                    text: data.error,
                    showConfirmButton: false,
                    timer: 2000,
                })
            }else{
                Swal.fire({
                    icon: "success",
                    title: "Add to cart successfully",
                    showConfirmButton: false,
                    timer: 2000,
                })
            }
            } catch (error) {
                console.log(error)
                Swal.fire({
                    icon: "error",
                    text: error,
                    showConfirmButton: false,
                    timer: 2000,
                })
            }
        })
    </script>
    
